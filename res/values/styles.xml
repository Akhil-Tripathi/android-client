<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ChatLabelStyle" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
	
    <style name="Text.Shadow.Loading">
        <item name="android:textColor">@color/loading</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Shadow.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Shadow.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Shadow.SignUp">
        <item name="android:textColor">@color/signup_blue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Shadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.27</item>
    </style>
	
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- just defines top layer "Animation" -->
	<style name="Animation" />

	<!-- the animations must have been defined in your "anim" folder, of course -->
	<style name="Animation.ActivityTransitions">
	    <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_noalpha</item>
	    <item name="android:activityOpenExitAnimation">@anim/slide_out_left_noalpha</item>
	    <item name="android:activityCloseEnterAnimation">@anim/slide_in_left_noalpha</item>
	    <item name="android:activityCloseExitAnimation">@anim/slide_out_right_noalpha</item>
	</style>

	<style name="NoTitleBar" parent="@android:style/Theme.NoTitleBar">
		<item name="android:windowAnimationStyle">@style/Animation.ActivityTransitions</item>
	    <item name="android:windowNoTitle">true</item>
    </style>

	<style name="WelcomeHikeMessage">
		<item name="android:layout_marginTop">90dp</item>
    </style>

	<style name="T_C_Message">
		<item name="android:paddingBottom">75dp</item>        
    </style>

	<style name="SignupButton">
	    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginLeft">45dp</item>
	    <item name="android:layout_marginRight">45dp</item>
	    <item name="android:layout_centerHorizontal">true</item>
	</style>
	
	<style name="Theme.CustomDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowNoTitle">true</item>
	</style>

	<style name="Text.Credits">
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:background">@drawable/bg_credits</item>
	    <item name="android:gravity">center</item>
	    <item name="android:minWidth">26dp</item>
	    <item name="android:paddingLeft">5dp</item>
	    <item name="android:paddingRight">5dp</item>
	    <item name="android:shadowColor">#33000000</item>
	    <item name="android:shadowDy">0.5</item>
	    <item name="android:shadowRadius">0.5</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:textSize">10sp</item>
	    <item name="android:textStyle">bold</item>
	</style>

	<style name="SocialButtons">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@null</item>
	    <item name="android:drawableLeft">@drawable/ic_twitter</item>
	    <item name="android:drawablePadding">5dp</item>
	    <item name="android:textColor">@color/social_btn_txt</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">@color/white</item>
	    <item name="android:shadowDy">1.0</item>
	    <item name="android:shadowRadius">1.0</item>
	    <item name="android:gravity">center</item>
	</style>

	<style name="ProfileButtons">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@drawable/invite_chatthread_button</item>
	    <item name="android:textColor">@color/invite_all</item>
	    <item name="android:textSize">13sp</item>
	    <item name="android:textStyle">bold|italic</item>
	    <item name="android:shadowColor">@color/white</item>
	    <item name="android:shadowDy">-1.0</item>
	    <item name="android:shadowRadius">1.0</item>
	    <item name="android:gravity">center</item>
	</style>
	
	<style name="FavoriteButtons">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textSize">13sp</item>
	    <item name="android:textStyle">bold|italic</item>
	    <item name="android:shadowColor">@color/black</item>
	    <item name="android:shadowDy">-1.0</item>
	    <item name="android:shadowRadius">1.0</item>
	    <item name="android:gravity">center</item>
	</style>
</resources>