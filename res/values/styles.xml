<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ChatLabelStyle" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Text.Shadow.Loading">
        <item name="android:textColor">@color/loading</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Shadow.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Shadow.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Shadow.SignUp">
        <item name="android:textColor">@color/signup_blue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Shadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.27</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- just defines top layer "Animation" -->
    <style name="Animation" />

    <!-- the animations must have been defined in your "anim" folder, of course -->
    <style name="Animation.ActivityTransitions">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_noalpha</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left_noalpha</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left_noalpha</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right_noalpha</item>
    </style>

    <style name="NoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="WelcomeHikeMessage">
        <item name="android:layout_marginTop">@dimen/hike_logo_margin</item>
    </style>

    <style name="T_C_Message">
        <item name="android:paddingBottom">75dp</item>
    </style>

    <style name="SignupButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginLeft">45dp</item>
	    <item name="android:layout_marginRight">45dp</item>
	    <item name="android:layout_centerHorizontal">true</item>
	</style>
	
	<style name="SignupButton.Text">
	</style>
	
	<style name="SignupButton.Text.Info">
	    <item name="android:layout_marginLeft">0dp</item>
	    <item name="android:layout_marginRight">0dp</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:textStyle">bold|italic</item>
	    <item name="android:shadowColor">@color/black</item>
	    <item name="android:shadowDy">0.5</item>
	    <item name="android:shadowRadius">0.5</item>
	    <item name="android:textColor">@color/offwhite</item>
	    <item name="android:gravity">center</item>
	</style>
	
	<style name="SignupButton.Text.Bold">
	    <item name="android:textSize">17sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="SignupButton.Text.Bold.Button">
	    <item name="android:shadowColor">#0f3a56</item>
	    <item name="android:shadowDy">-0.5</item>
	    <item name="android:shadowRadius">0.5</item>
	    <item name="android:textColor">@drawable/signup_btn_text</item>
	</style>
	
	<style name="SignupButton.Text.Bold.Loading">
	    <item name="android:layout_marginLeft">0dp</item>
	    <item name="android:layout_marginRight">0dp</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#0f3a56</item>
	    <item name="android:shadowDy">0.5</item>
	    <item name="android:shadowRadius">0.5</item>
	    <item name="android:textColor">#51a8dd</item>
	</style>
	
	<style name="Theme.CustomDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="Theme.CustomDialog.Keyboard">
	    <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
	</style>

	<style name="Text.Credits">
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:background">@drawable/bg_credits</item>
	    <item name="android:gravity">center</item>
	    <item name="android:minWidth">26dp</item>
	    <item name="android:paddingLeft">5dp</item>
	    <item name="android:paddingRight">5dp</item>
	    <item name="android:shadowColor">#33000000</item>
	    <item name="android:shadowDy">0.5</item>
	    <item name="android:shadowRadius">0.5</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:textSize">10sp</item>
	    <item name="android:textStyle">bold</item>
	</style>

	<style name="SocialButtons">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@null</item>
	    <item name="android:drawableLeft">@drawable/ic_twitter</item>
	    <item name="android:drawablePadding">5dp</item>
	    <item name="android:textColor">@color/social_btn_txt</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">@color/white</item>
	    <item name="android:shadowDy">1.0</item>
	    <item name="android:shadowRadius">1.0</item>
	    <item name="android:gravity">center</item>
	</style>

	<style name="ProfileButtons">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@drawable/invite_chatthread_button</item>
	</style>
	
	<style name="ProfileButtonTextView">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/invite_all</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:textStyle">bold|italic</item>
	    <item name="android:shadowColor">@color/white</item>
	    <item name="android:shadowDy">1.2</item>
	    <item name="android:shadowRadius">1.2</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingBottom">1dp</item>
	</style>
	
	<style name="FavoriteButtons">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:textSize">13sp</item>
	    <item name="android:textStyle">bold|italic</item>
	    <item name="android:shadowColor">@color/black</item>
	    <item name="android:shadowDy">-1.0</item>
	    <item name="android:shadowRadius">1.0</item>
	    <item name="android:gravity">center</item>
	</style>
	
	<style name="FavInfo">
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:shadowColor">@color/black</item>
	    <item name="android:shadowDy">0.7</item>
	    <item name="android:shadowRadius">0.7</item>
	    <item name="android:textColor">#e4e4df</item>
	    <item name="android:paddingLeft">30dp</item>
	    <item name="android:paddingRight">30dp</item>
	</style>

    <style name="Theme.CustomDialog.Status">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="HelpButtonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/offwhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#0f3a56</item>
        <item name="android:shadowDy">-0.9</item>
        <item name="android:shadowRadius">0.5</item>
    </style>
    
    <style name="ProfileShadow">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">0.7</item>
        <item name="android:shadowRadius">0.7</item>
    </style>
    
    <style name="UpdateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="UpdateText.StatusYesBtn">
        <item name="android:background">@drawable/bg_update_yes_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="UpdateText.StatusNoBtn">
        <item name="android:background">@drawable/bg_update_no_btn</item>
        <item name="android:textColor">@color/update_no_btn</item>
    </style>

    <style name="PreviewText">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#4DFFFFFF</item>
        <item name="android:shadowDy">0.7</item>
        <item name="android:shadowRadius">0.7</item>
    </style>

    <style name="PreviewTextBtn">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:shadowColor">#4DFFFFFF</item>
        <item name="android:shadowDy">0.7</item>
        <item name="android:shadowRadius">0.7</item>
    </style>
    
    <style name="TutorialOverlayText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">0.7</item>
        <item name="android:shadowRadius">0.7</item>
    </style>

    <style name="HomeList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@drawable/home_list_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:listSelector">#00000000</item>
    </style>

    <style name="Hike.ActionBarTheme" parent="Theme.Sherlock">
        <item name="actionBarSize">@dimen/st__action_bar_default_height</item>
        <item name="actionBarTabStyle">@style/Hike.ActionBar.TabView</item>
        <item name="actionBarTabTextStyle">@style/Hike.ActionBar.Tab.Text</item>
    </style>

    <style name="Hike.ActionBar.TabView" parent="Widget.Sherlock.ActionBar.TabView">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="Hike.ActionBar.Tab.Text" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="vpiIconPageIndicatorStyle">@style/CustomIconPageIndicator</item>
        <item name="actionOverflowButtonStyle">@style/OverflowMenu</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenu</item>
        <item name="actionBarSize">@dimen/st__action_bar_default_height</item>
        <item name="android:actionBarSize">@dimen/st__action_bar_default_height</item>
    </style>
    
    <style name="AppTheme.Home">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiTabTextIndicatorStyle">@style/TabText</item>
    </style>
    
    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/bg_header</item>
        <item name="android:background">@drawable/bg_header</item>
        <item name="backgroundSplit">@color/credits_blue</item>
        <item name="android:backgroundSplit">@color/credits_blue</item>
        <item name="titleTextStyle">@style/NoTitleText</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
    </style>

	<style name="NoTitleText">
        <item name="android:textColor">#00000000</item>
	</style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/home_tab_indicator</item>
        <item name="android:divider">@drawable/home_tab_divider</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomIconPageIndicator" parent="Widget.IconPageIndicator">
        <item name="android:background">@drawable/emoticon_tab_indicator</item>
        <item name="android:divider">@drawable/emoticon_tab_divider</item>
        <item name="android:dividerPadding">5dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>
    
    <style name="TabText">
        <item name="android:textColor">#fffcf7</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="ActionBarText">
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="RequestBtn">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="RequestBtn.Accept">
        <item name="android:onClick">onYesBtnClick</item>
        <item name="android:background">@drawable/bg_green_btn</item>
        <item name="android:src">@drawable/ic_accept</item>
    </style>

    <style name="RequestBtn.Reject">
        <item name="android:onClick">onNoBtnClick</item>
        <item name="android:background">@drawable/bg_red_btn</item>
        <item name="android:src">@drawable/ic_cancel</item>
    </style>
    
    <style name="OverflowMenu">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

	<style name="UpdatesContainer">
	    <item name="android:layout_margin">@dimen/updates_margin</item>
        <item name="android:background">@drawable/bg_updates_white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
	</style>    
</resources>