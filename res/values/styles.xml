<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatLabelStyle" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
	
    <style name="Text.Shadow.Loading">
        <item name="android:textColor">@color/loading</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Shadow.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Shadow.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Shadow.SignUp">
        <item name="android:textColor">@color/signup_blue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Shadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.27</item>
    </style>
	
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>