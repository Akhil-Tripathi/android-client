<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <bitmap 
            android:dither="true" 
            android:src="@drawable/bg_new_updates_pressed" 
            android:tileMode="repeat" />
    </item>
    <item android:state_selected="true">
        <bitmap 
            android:dither="true" 
            android:src="@drawable/bg_new_updates_selected" 
            android:tileMode="repeat" />
    </item>
    <item>
        <bitmap 
            android:dither="true" 
            android:src="@drawable/bg_new_updates" 
            android:tileMode="repeat" />
    </item>

</selector>