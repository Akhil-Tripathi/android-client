<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#ffffff" android:centerX="0.5" android:centerY="0.5" android:endColor="#ffffff" android:startColor="#ffffff" />

            <stroke android:width="5dp" android:color="#ffffff" />

            <corners android:radius="1dp" />

            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:centerColor="#ffffff" android:centerX="0.5" android:centerY="0.5" android:endColor="#ffffff" android:startColor="#ffffff" />

            <stroke android:width="5dp" android:color="#ffffff" />

            <corners android:radius="1dp" />

            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />
        </shape></item>
    <item>
    <shape>
            <gradient android:angle="270" android:centerColor="#ffffff" android:centerX="0.5" android:centerY="0.5" android:endColor="#ffffff" android:startColor="#ffffff" />

            <stroke android:width="5dp" android:color="#ffffff" />

            <corners android:radius="1dp" />

            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />
     </shape></item>

</selector>