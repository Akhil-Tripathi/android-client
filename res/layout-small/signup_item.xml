<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.bsb.hike.view.RobotoTextView
        android:id="@+id/enter_txt1"
        style="@style/Text.Shadow.White"
        android:gravity="center_horizontal" />

    <com.bsb.hike.view.RobotoTextView
        android:id="@+id/enter_txt2"
        style="@style/Text.Shadow.White"
        android:gravity="center_horizontal" />

    <com.bsb.hike.view.RobotoEditText
        android:id="@+id/et_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/tb_phone"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textSize="15sp"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.bsb.hike.view.RobotoButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:textColor="@drawable/top_bar_btn_txt_selector"
            style="@style/Text.Shadow.White.Bold" />

        <RelativeLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/signup_loading_bckg"
            android:orientation="horizontal"
            android:visibility="visible" >

           <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <com.bsb.hike.view.RobotoTextView
                android:id="@+id/txt_loading"
                style="@style/Text.Shadow.Loading"
                android:layout_toRightOf="@id/loading_progress"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <com.bsb.hike.view.RobotoTextView
            android:id="@+id/txt_wrong_number"
            style="@style/Text.Shadow.White"
            android:text="@string/wrong_number"
            android:textSize="12sp"
            android:visibility="visible" />

        <com.bsb.hike.view.RobotoButton
            android:id="@+id/txt_tap_here"
            style="@style/Text.Shadow.White"
            android:layout_marginLeft="2dp"
            android:text="@string/tap_here"
            android:textColor="@drawable/tap_here_txt_selector"
            android:textSize="12sp"
            android:visibility="visible"
            android:background="@null" />
    </LinearLayout>

</LinearLayout>