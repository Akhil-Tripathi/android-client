<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <RelativeLayout
        android:id="@+id/tc_continue_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp" >

        <LinearLayout
            android:id="@+id/t_c_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tc" />

            <com.bsb.hike.view.RobotoButton
                android:id="@+id/terms_and_conditions"
                style="@style/Text.Shadow.SignUp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/terms_privacy"
                android:textColor="@drawable/t_c_txt_selector"
                android:textSize="16sp"
                android:background = "@null" />
        </LinearLayout>

        <com.bsb.hike.view.RobotoButton
            android:id="@+id/btn_continue"
            style="@style/Text.Shadow.White.Bold"
            android:layout_width="match_parent"
            android:layout_below="@id/t_c_layout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/get_started" />

        <RelativeLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/t_c_layout"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/signup_loading_bckg"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <com.bsb.hike.view.RobotoTextView
                android:id="@+id/txt_loading"
                style="@style/Text.Shadow.Loading"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="@string/pulling_digits"
                android:textSize="13sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/comm_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tc_continue_layout" >

        <ImageView
            android:id="@+id/hike_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/logo_land" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hike_logo" >

            <com.bsb.hike.view.RobotoTextView
                android:id="@+id/error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/welcome_screen_error_message"
                android:textColor="@color/red"
                android:visibility="gone" />

            <com.bsb.hike.view.RobotoTextView
                android:id="@+id/welcome_1"
                style="@style/Text.Shadow.White.Bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/welcome_message_1"
                android:textSize="20sp" />

            <com.bsb.hike.view.RobotoTextView
                android:id="@+id/welcome_2"
                style="@style/Text.Shadow.White.Bold"
                android:layout_below="@+id/welcome_1"
                android:layout_centerHorizontal="true"
                android:text="@string/welcome_message_2"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/boo_boo" />

</RelativeLayout>