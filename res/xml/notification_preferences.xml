<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/notifications" >

    <com.bsb.hike.view.IconCheckBoxPreference
        icon="preference_vibe"
        android:defaultValue="true"
        android:key="vibratePref"
        android:layout="@layout/icon_preference"
        android:summary="@string/vibrate_msg"
        android:title="@string/vibrate"
        android:widgetLayout="@layout/checkbox_widget" />
    <com.bsb.hike.view.IconCheckBoxPreference
        icon="preference_sound"
        android:defaultValue="true"
        android:key="soundPref"
        android:layout="@layout/icon_preference"
        android:summary="@string/sound_msg"
        android:title="@string/sound"
        android:widgetLayout="@layout/checkbox_widget" />    

	<com.bsb.hike.view.IconCheckBoxPreference
        icon="preference_led"
        android:defaultValue="true"
        android:key="ledPref"
        android:layout="@layout/icon_preference"
        android:summary="@string/led_notification_info"
        android:title="@string/led_notification"
        android:widgetLayout="@layout/checkbox_widget" />

	<com.bsb.hike.view.IconCheckBoxPreference
        icon="ic_hike_jingle"
        android:defaultValue="true"
        android:key="jinglePref"
        android:layout="@layout/icon_preference"
        android:summary="@string/native_jingle_info"
        android:title="@string/native_jingle"
        android:widgetLayout="@layout/checkbox_widget" />
	
	<com.bsb.hike.view.IconCheckBoxPreference
        icon="ic_hike_jingle"
        android:defaultValue="true"
        android:key="receiveSmsPref"
        android:layout="@layout/icon_preference"
        android:summary="Pull in SMS"
        android:title="Native SMS Client"
        android:widgetLayout="@layout/checkbox_widget" />
	
	<com.bsb.hike.view.IconCheckBoxPreference
        icon="ic_hike_jingle"
        android:defaultValue="true"
        android:key="sendUndeliveredAsNativeSmsPref"
        android:layout="@layout/icon_preference"
        android:summary="Send native sms"
        android:title="Hike2Hike fallback"
        android:widgetLayout="@layout/checkbox_widget" />
	
	<com.bsb.hike.view.IconPreference
        icon="ic_status_update_pref"
        android:key="statusPref"
        android:layout="@layout/icon_preference"
        android:title="@string/status_updates" />	
	
</PreferenceScreen>