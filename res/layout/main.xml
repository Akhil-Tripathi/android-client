<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_editmessage" />
		<ImageView
		    android:id="@+id/edit_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_searchicon" />
    </RelativeLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_nav_bar">

        <RelativeLayout
	       	android:id="@+id/new_user_message"
            android:background="@color/white"
            android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	       	android:layout_alignParentBottom="true"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:visibility="visible"/>
        	<ImageView
        	    android:id="@+id/edit_message_icon"
        	    android:src="@drawable/ic_editmessage_white"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_centerInParent="true"

        	    />
        	<TextView
        	    android:textColor="@color/black"
        	    android:id="@+id/tap_to_send_message"
        	    android:text="Tap to send message"
        	    android:layout_width="wrap_content"
        	    android:layout_centerHorizontal="true"
        	    android:layout_below="@id/edit_message_icon"
        	    android:textAppearance="?android:attr/textAppearanceLarge"
        	    android:layout_height="wrap_content"/>
        	

	    <ListView
	        android:id="@+id/conversations"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:visibility="invisible" >
	    </ListView>

	</RelativeLayout>

</RelativeLayout>