<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 	<LinearLayout
        android:id="@+id/top_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/headerbar" >

        <ImageView
            android:layout_marginLeft="17dp"
            android:layout_gravity="center"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:src="@drawable/ic_header_logo"/>
	</LinearLayout>

     <com.bsb.hike.view.HikeListView
        android:fadingEdge="none"
        android:id="@+id/conversations"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_panel"
        android:layout_above="@+id/bottom_nav_bar"
        android:layout_alignParentLeft="true"
        android:layout_weight="10"
        android:background="@drawable/thatch_repeat"
        android:choiceMode="none"
        android:footerDividersEnabled="false"
        android:dividerHeight="2dp"
  	    android:divider="@drawable/ic_thread_divider">
    </com.bsb.hike.view.HikeListView>

    <View
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottombar" >
    </View>

    <View
        android:id="@+id/messages_list_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_white"
        android:visibility="visible" >
    </View>

	<View
        android:layout_below="@id/conversations"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/dropshadow" />

    <ImageView
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_newmessage" />

    <RelativeLayout
        android:layout_above="@+id/bottom_nav_bar"
        android:visibility="gone"
        android:id="@+id/empty_view"
   		android:background="@color/white"
   		android:layout_width="match_parent"
   		android:layout_height="match_parent">

        <ImageView
        	android:id="@+id/imageView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentBottom="true"
        	android:layout_centerHorizontal="true"
        	android:src="@drawable/ic_hometip" />
    </RelativeLayout>
</RelativeLayout>