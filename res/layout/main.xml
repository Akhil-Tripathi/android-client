<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thatch_repeat">

   <include
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/top_panel" />

 	<LinearLayout
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_below="@id/top_panel"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@drawable/thatch_repeat" >

        <com.bsb.hike.view.HikeListView
            android:id="@+id/conversations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/background_view"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/top_panel"
            android:cacheColorHint="#00000000"
            android:background="@drawable/thatch_repeat"
            android:choiceMode="none"
            android:divider="@drawable/ic_thread_divider_other"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:footerDividersEnabled="false" >
        </com.bsb.hike.view.HikeListView>

		<View
		    android:id="@+id/conversation_list_dropshadow"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
 	       	android:background="@drawable/dropshadow" />
    </LinearLayout>

    <View
        android:id="@+id/messages_list_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_white"
        android:visibility="visible" >
    </View>

	<RelativeLayout
		android:layout_below="@id/top_panel"
        android:visibility="visible"
        android:id="@+id/empty_view"
   		android:background="@drawable/thatch_repeat"
   		android:layout_width="match_parent"
   		android:layout_height="match_parent">

      <RelativeLayout
           android:id="@+id/credits_help_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="7dp"
           android:layout_marginRight="7dp"
           android:background="@drawable/credits_help_bckg"
           android:visibility="visible"
           android:layout_alignParentTop="true" >

           <ImageButton
               android:id="@+id/close"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@null"
               android:paddingLeft="3dp"
               android:paddingRight="7dp"
               android:onClick="onToolTipClose"
			   android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               android:src="@drawable/close_btn_selector" />

           <com.bsb.hike.view.RobotoButton
               android:id="@+id/learn_more_btn"
			   android:layout_alignParentRight="true"
			   android:layout_centerVertical="true"
               style="@style/Text.Shadow.White.Bold"
               android:layout_marginLeft="5dp"
               android:background="@null"
               android:text="@string/learn_more"
               android:onClick="onInviteClick"
               android:textColor="@drawable/t_c_txt_selector"
               android:textSize="13sp" />
           
           <com.bsb.hike.view.RobotoTextView
               style="@style/Text.Shadow.White.Bold"
               android:text="@string/invite_tooltip"
               android:layout_toLeftOf="@id/learn_more_btn"
               android:textSize="13sp" />
           </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerInParent="true"
            android:src="@drawable/no_threads" />

		</RelativeLayout>
	</RelativeLayout>

    <Button
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/newmessage" />

</RelativeLayout>