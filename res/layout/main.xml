<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thatch_repeat">

 	<LinearLayout
        android:id="@+id/top_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/headerbar" >

        <ImageView
            android:layout_marginLeft="17dp"
            android:layout_gravity="center"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:src="@drawable/ic_logoheader"/>
	</LinearLayout>

 	<View
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottombar" >
    </View>

	<View
		android:id="@+id/bottom_nav_bar_dropshadow"
		android:layout_above="@id/bottom_nav_bar"
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@drawable/dropshadow" />

 	<LinearLayout
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_below="@id/top_panel"
        android:layout_above="@id/bottom_nav_bar_dropshadow"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@drawable/thatch_repeat" >

        <com.bsb.hike.view.HikeListView
            android:id="@+id/conversations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/background_view"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/top_panel"
            android:cacheColorHint="#00000000"
            android:background="@drawable/thatch_repeat"
            android:choiceMode="none"
            android:divider="@drawable/ic_thread_divider_other"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:footerDividersEnabled="false" >
        </com.bsb.hike.view.HikeListView>

		<View
		    android:id="@+id/conversation_list_dropshadow"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
 	       	android:background="@drawable/dropshadow" />
    </LinearLayout>

    <View
        android:id="@+id/messages_list_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_white"
        android:visibility="visible" >
    </View>

	<RelativeLayout
		android:layout_below="@id/top_panel"
        android:layout_above="@+id/bottom_nav_bar"
        android:visibility="gone"
        android:id="@+id/empty_view"
   		android:background="@drawable/thatch_repeat"
   		android:layout_width="match_parent"
   		android:layout_height="match_parent">

        <com.bsb.hike.view.RobotoTextView
		    android:id="@+id/invite_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:background="@drawable/ic_bubble_tip"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/invite_friend">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerInParent="true"
            android:src="@drawable/no_threads" />

		</RelativeLayout>
	</RelativeLayout>

    <Button
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_newmessage" />

</RelativeLayout>