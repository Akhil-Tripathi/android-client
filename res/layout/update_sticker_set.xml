<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/art_sticker_shape"
    android:gravity="center"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/sticker_placeholder"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/misc_sticker_placeholder"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:contentDescription="Update Button"
        android:scaleType="centerInside"
        android:src="@drawable/ic_update"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/download_progress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Progress Bar"
        android:src="@drawable/ic_spinner_green"
        android:visibility="gone" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/new_number_stickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Update Count"
        android:text="5 MORE"
        android:textColor="@color/standerd_light_grey2"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>