<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/shop_banner"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@color/shop_banner_bg"
        android:orientation="vertical" >

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:id="@+id/update_in_stickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_all_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/sticker_shop_update_color"
        android:gravity="center"
        android:visibility="gone" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_all"
            android:textColor="@color/white_100"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>