<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hike="http://schemas.android.com/apk/res/com.bsb.hike"
    android:id="@+id/favorite_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:onClick="onFavoriteIntroClick"
    android:background="#B3000000"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/fav_glow"
        android:layout_width="48dp"
        android:layout_height="@dimen/top_bar_btn_height"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_favorites_glow" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fav_glow"
        android:layout_marginTop="5dp"
        android:src="@drawable/fav_intro_arrow" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/intro_fav"
        style="@style/SignupButton.Text.Info"
        android:layout_below="@id/arrow"
        android:layout_marginTop="10dp"
        android:text="@string/intro_fav"
        android:textSize="19sp"
        android:textStyle="bold"
        hike:font="omnes" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tutorial_pager"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/intro_fav"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/page_indicator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutorial_pager"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/fav_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_indicator_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDy="0.7"
        android:shadowRadius="0.7"
        android:text="@string/fav_info1"
        android:textColor="#e4e4df"
        android:textSize="15sp" />

</RelativeLayout>