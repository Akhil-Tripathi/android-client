<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/top_shadow"/>
    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e5e5e2"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/offwhite" />

            <LinearLayout
                android:id="@+id/emoticons_categories_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >
                
                <com.bsb.hike.view.CustomFontButton
                    android:id="@+id/hike_emoticons_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_selector_left"
                    android:onClick="onEmoticonCategoryClick"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    android:text="@string/hike"
                    android:textSize="15sp"
                    android:textColor="@drawable/tab_text_selector"
                    android:textStyle="bold|italic" />

                <com.bsb.hike.view.CustomFontButton
                    android:id="@+id/emoji_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_selector_right"
                    android:onClick="onEmoticonCategoryClick"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDy="1.0"
                    android:shadowRadius="1.0"
                    android:text="@string/emoji"
                    android:textSize="15sp"
                    android:textColor="@drawable/tab_text_selector"
                    android:textStyle="bold|italic" />
                
            </LinearLayout>

            <View 
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/ic_emoticon_divider_2"
                android:layout_above="@android:id/tabs"/>
            
            <LinearLayout
                android:id="@+id/page_indicator_container"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_above="@id/divider_2"
                android:gravity="center"
                android:orientation="horizontal" />
            
            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/recent_use_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:shadowColor="#FFFFFFFF"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:layout_below="@id/emoticons_categories_container"
                android:text="@string/recently_used"
                android:textColor="@color/timestampcolor"
                android:textSize="11sp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:visibility="visible" />
            
            <android.support.v4.view.ViewPager
                android:id="@+id/emoticon_pager"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/page_indicator_container"
                android:layout_below="@id/emoticons_categories_container" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </RelativeLayout>
    </TabHost>

</LinearLayout>