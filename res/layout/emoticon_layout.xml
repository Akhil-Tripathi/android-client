<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2a3231"
        android:orientation="vertical" >

        <com.bsb.hike.view.StickerEmoticonIconPageIndicator
            android:id="@+id/icon_indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true" />

        <android.support.v4.view.ViewPager
            android:id="@+id/emoticon_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/icon_indicator"
            android:paddingBottom="@dimen/emoticon_pager_padding"
            android:paddingTop="@dimen/emoticon_pager_padding" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:background="@color/sticker_emoticon_divider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@id/icon_indicator"
            android:background="@color/sticker_emoticon_divider" />

        <LinearLayout
            android:id="@+id/stickers_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:visibility="gone" >

            <include layout="@layout/tool_tip" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>