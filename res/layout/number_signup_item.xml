<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/num_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/txt_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/enter_phone" />

    <LinearLayout
        style="@style/SignupButton"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_phone_tb"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp" >
        
        <Button 
            android:id="@+id/country_picker"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_country_code"
            android:textColor="@color/offwhite"
            android:shadowColor="#66FFFFFF"
            android:shadowDy="-0.5"
            android:shadowRadius="0.5"
            android:textSize="15sp"
            android:onClick="onCountryPickerClick"
            android:text="IN +91" />

        <com.bsb.hike.view.CustomFontEditText
            android:id="@+id/et_enter_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:hint="@string/phone_num"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="15sp"
            android:visibility="visible" >

            <requestFocus />
        </com.bsb.hike.view.CustomFontEditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn_continue"
            style="@style/SignupButton"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:src="@drawable/next_btn_selector" />

        <RelativeLayout
            android:id="@+id/loading_layout"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_loading_bckg"
            android:orientation="horizontal"
            android:visibility="invisible"
			style="@style/SignupButton"
			android:gravity="center_horizontal" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <ImageView
                android:id="@+id/txt_loading"
                style="@style/Text.Shadow.Loading"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/loading_progress"
                android:src="@drawable/verifying_num" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageButton android:id="@+id/india_only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hike_india_txt"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@null"/>
    
    <ImageView android:id="@+id/invalid_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/invalid_num"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>
</LinearLayout>