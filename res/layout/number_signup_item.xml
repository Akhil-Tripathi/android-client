<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/num_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/txt_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/enter_phone" />

    <com.bsb.hike.view.RobotoEditText
        android:id="@+id/et_enter_num"
        style="@style/SignupButton"
        android:layout_marginTop="10dp"
        android:background="@drawable/tb_phone"
        android:ems="10"
        android:hint="@string/phone_num"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="15sp"
        android:visibility="visible" >

        <requestFocus />
    </com.bsb.hike.view.RobotoEditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn_continue"
            style="@style/SignupButton"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:src="@drawable/next_btn_selector" />

        <RelativeLayout
            android:id="@+id/loading_layout"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_loading_bckg"
            android:orientation="horizontal"
            android:visibility="visible"
			style="@style/SignupButton"
			android:gravity="center_horizontal" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <ImageView
                android:id="@+id/txt_loading"
                style="@style/Text.Shadow.Loading"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/loading_progress"
                android:src="@drawable/verifying_num" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>