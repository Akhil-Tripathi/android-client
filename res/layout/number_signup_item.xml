<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/num_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/txt_img1"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:gravity="center"
        android:text="@string/whats_your_number"
        android:textColor="@color/phone_entering_header"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="289dp"
        android:layout_height="89dp"
        android:layout_gravity="center"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/selected_country"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_fill_country_selector"
            android:onClick="onCountryPickerClick"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="top"
                android:src="@drawable/ic_country" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/selected_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:text="India"
                android:textColor="@color/selected_country"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true" >

            <RelativeLayout
                android:id="@+id/country_code_view_group"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_country_picker_selector"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_phone_signup" />

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:gravity="top"
                    android:text="+"
                    android:textColor="@color/selected_country"
                    android:textSize="18sp" />

                <com.bsb.hike.view.CustomFontEditText
                    android:id="@+id/country_picker"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="bottom"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="40dp"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:text="+91"
                    android:textColor="@color/selected_country"
                    android:textSize="18sp" />
            </RelativeLayout>

            <com.bsb.hike.view.CustomFontEditText
                android:id="@+id/et_enter_num"
                android:layout_width="196dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_country_picker_selector"
                android:ems="10"
                android:hint="@string/phone_num"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/selected_country"
                android:textSize="18sp"
                android:visibility="visible" >

                <requestFocus />
            </com.bsb.hike.view.CustomFontEditText>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/loading_layout"
            style="@style/SignupButton"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_btn_loading"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/txt_loading"
                style="@style/SignupButton.Text.Bold.Loading"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/loading_progress"
                android:text="@string/verifying_num_signup"
                android:textSize="16sp" />
        </RelativeLayout>

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_try_again"
            style="@style/SignupButton.Text.Bold.Button"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_network_error"
            android:onClick="onClick"
            android:text="@string/network_error"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/invalid_num"
        style="@style/SignupButton.Text.Info"
        android:layout_marginTop="10dp"
        android:text="@string/invalid_num_signup"
        android:textSize="14sp"
        android:visibility="invisible" />

</LinearLayout>