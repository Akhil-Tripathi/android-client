<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        style="@style/UpdatesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Pankaj Verma"
            android:textColor="@color/ftue_card_header"
            android:textSize="24sp"
            android:textStyle="italic"
            android:paddingLeft="12dp" />

        <LinearLayout
            android:id="@+id/details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginRight="5dp"
            android:paddingLeft="12dp"
            android:orientation="vertical" >

            <com.bsb.hike.view.LinkedTextView
                android:id="@+id/main_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Added you as a friend"
                android:textColor="@color/ftue_card_header"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contacts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" />
        
        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:background="@drawable/list_item"
	        android:orientation="horizontal"
	        android:textSize="14sp"
	        android:textColor="#0f8fe1"
	        android:gravity="center_vertical"
	        android:paddingLeft="17dp"
	        android:paddingRight="12dp"
	        android:layout_below="@id/contacts_container"
	        android:text="see all aj;f;a fad;f" />
        
    </RelativeLayout>

</RelativeLayout>