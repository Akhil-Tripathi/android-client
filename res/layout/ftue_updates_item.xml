<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        style="@style/CardContainerWithdoutPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="23dp" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Pankaj Verma"
            android:textColor="@color/ftue_card_header"
            android:textSize="24sp"
            android:textStyle="italic"
            android:paddingRight="10dp"
            android:paddingLeft="22dp" />

        <LinearLayout
            android:id="@+id/details_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginRight="5dp"
            android:paddingLeft="22dp"
            android:paddingRight="10dp"
            android:orientation="vertical" >

            <com.bsb.hike.view.LinkedTextView
                android:id="@+id/main_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Added you as a friend"
                android:textColor="@color/ftue_card_header"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contacts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical" />
        
        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/see_all"
            android:text="@string/see_all_upper_caps"
            style="@style/FtueCardActionButton"
            android:layout_below="@id/contacts_container" />
        
    </RelativeLayout>

</RelativeLayout>