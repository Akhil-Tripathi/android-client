<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeeb"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/top_panel" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_panel" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/offwhite"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/free_sms_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_free_sms"
                        android:textColor="@color/lightblack"
                        android:textSize="18sp" />

                    <com.bsb.hike.view.CustomFontTextView
                        android:id="@+id/available_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/availble_month"
                        android:textColor="@color/notif_subtext"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/credit_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_credits2" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/credit_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/credit_icon"
                    android:text="80"
                    android:textColor="@color/lightblack"
                    android:textSize="32dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/thatch_repeat" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/credit_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_free" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/free_sms_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/hike_to_hike"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/available_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/free_sms_txt"
                    android:text="@string/free_always_world"
                    android:textColor="@color/subtext"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/hike_hike_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/available_txt"
                    android:layout_marginTop="10dp"
                    android:text="@string/hike_to_hike_info"
                    android:textColor="@color/subtext"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/feedback_dropshadow_top" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/sms_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_sms" />

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/sms_icon"
                    android:text="@string/free_sms"
                    android:textColor="@color/lightblack"
                    android:textSize="18sp" />
            </RelativeLayout>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/every_month_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/every_month"
                android:textColor="@color/notif_subtext"
                android:textSize="15sp"
                android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center_vertical" >

                <com.bsb.hike.view.CustomFontButton
                    android:id="@+id/invite_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/invite_btn_bckg_selector"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/invite_now"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/friends_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/invite_now"
                    android:gravity="left"
                    android:text="@string/friends_on_hike_0"
                    android:textColor="@color/notif_subtext"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/friends_joined_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:text="Friends joined:"
                android:textColor="@color/notif_subtext"
                android:textSize="15sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/credit_item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dropshadow" />

            <com.bsb.hike.view.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/thatch_repeat"
                android:gravity="center"
                android:text="@string/disclaimer_india"
                android:textColor="@color/subtext"
                android:textSize="11sp"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>