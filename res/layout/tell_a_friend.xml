<?xml version="1.0" encoding="utf-8"?>
<com.bsb.hike.view.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/animation_layout_left_sidebar"
        android:layout_width="272dp"
        android:layout_height="match_parent"
        android:visibility="invisible" >

        <include layout="@layout/left_drawer" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/animation_layout_right_sidebar"
        android:layout_width="272dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="invisible" >

        <include layout="@layout/right_drawer" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/animation_layout_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/thatch_repeat"
        android:orientation="vertical" >

        <include
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/top_panel" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_panel"
            android:fadingEdge="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/items_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/profile_bckg"
                    android:orientation="vertical" />

                <com.bsb.hike.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="6dp"
                    android:drawableTop="@drawable/ic_invite_cup"
                    android:gravity="center"
                    android:shadowColor="#66ffffff"
                    android:shadowDy="0.5"
                    android:shadowRadius="0.5"
                    android:text="@string/invite_earn"
                    android:textColor="@color/subtext"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/via_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:shadowColor="#66ffffff"
                    android:shadowDy="0.5"
                    android:shadowRadius="0.5"
                    android:text="@string/earn_sms_friend_join"
                    android:textColor="#a6a5a1"
                    android:textSize="13sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</com.bsb.hike.view.DrawerLayout>