<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="30dp"
    android:paddingBottom="2dp" >

    <LinearLayout
        android:id="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_sticker_placeholder"
        android:gravity="center_vertical|right"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:indeterminateDrawable="@drawable/loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sticker_1_hi"
            android:visibility="gone" />

        <include layout="@layout/message_time_status_ext" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/placeholder"
        android:layout_alignTop="@id/placeholder"
        layout="@layout/message_overlay" />

</RelativeLayout>