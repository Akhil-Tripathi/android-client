<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/version_item_marginTop"
        android:text="@string/app_version"
        android:textColor="@color/list_item_header"
        android:textSize="13sp"
        android:textStyle="bold" />

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/with_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/version_item_marginBottom"
        android:text="@string/with_love"
        android:textColor="@color/description_lightgrey"
        android:textSize="12sp"
        android:textStyle="bold|italic" />

</LinearLayout>