<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thatch_repeat"
	android:paddingLeft="18dp"
	android:paddingRight="18dp"
    android:paddingBottom="5dp">

	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:id="@+id/timestamp_container"
		android:layout_marginTop="10dp">

		<View 
		    android:layout_height="1dp"
		    android:layout_width="0dp"
		    android:layout_weight="10"
		    android:layout_gravity="center"
		    android:background="@drawable/ic_chatthread_divider"/>
		    
	    <com.bsb.hike.view.CustomFontTextView
	        android:id="@+id/timestamp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="7dp"
        	android:layout_marginRight="7dp"
        	android:layout_alignParentTop="true"
        	android:layout_centerHorizontal="true"
        	android:text="This is the timestamp"
        	android:textSize="13sp"
        	android:textColor="@color/timestampcolor"
        	android:shadowColor="#80FFFFFF"
        	android:shadowDy="0.4"
        	android:shadowRadius="0.3" />

	    <View 
		    android:layout_height="1dp"
		    android:layout_width="0dp"
		    android:layout_weight="10"
		    android:layout_gravity="center"
		    android:background="@drawable/ic_chatthread_divider"/>
	</LinearLayout>

	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/timestamp_container" >

	<ImageView
	    android:layout_centerVertical="true"
	    android:layout_marginRight="7dp"
        android:id="@+id/msg_status_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_blank" />

	<com.bsb.hike.view.CustomFontTextView
        android:id="@+id/message_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bubble_green"
        android:gravity="left"
        android:paddingTop="7dp"
        android:paddingBottom="17dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@id/msg_status_indicator"
        android:text="This is the message a much"
        android:textSize="16sp"
        android:textColor="@color/chat_color" />

	<com.bsb.hike.view.CustomFontTextView
        android:id="@+id/message_hike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bubble_blue"
        android:gravity="left"
       	 android:paddingTop="7dp"
        android:paddingBottom="17dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@id/msg_status_indicator"
        android:text="This is the message a much"
        android:textSize="16sp"
        android:textColor="@color/chat_color" />

	</RelativeLayout>
</RelativeLayout>