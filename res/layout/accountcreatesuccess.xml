<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thatch_repeat" >

    <Button
        android:id="@+id/btn_scan_ab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/signup_button"
        android:enabled="true"
        android:text="@string/click_next"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_scan_ab" >

        <ImageView
            android:id="@+id/ic_hike_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/empty_messages_hike_logo" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/operator_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/airtel_logo" />

            <TextView
                android:id="@+id/text_carrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="18dp"
                android:layout_toRightOf="@id/operator_icon"
				android:layout_alignTop="@id/operator_icon"
                android:gravity="left"
                android:text="@string/we_got_you_on_carrier"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/people_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/operator_icon"
                android:paddingTop="3dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/signup_dude" />

            <TextView
                android:id="@+id/text_give_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/people_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="18dp"
                android:layout_toRightOf="@id/people_icon"
                android:gravity="left"
                android:text="@string/tell_your_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_give_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:gravity="center"
                android:hint="John Appleseed"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:singleLine="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>