<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:id="@+id/nux_invite_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/invite_footer_top_margin"
    android:visibility="gone">
    
	<ImageView
	    android:id="@+id/sticker_invite_footer"
	    android:layout_centerHorizontal="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/art_sticker_whistle"/>
	
	<TextView
	    android:id="@+id/invite_footer_header"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/sticker_invite_footer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="20dp"
	    android:textSize="24sp"
	    android:text="@string/invite_footer_header" >
	</TextView>
	
	<TextView
	    android:id="@+id/invite_footer_subtext"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/invite_footer_header"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/nux_text_text_margin"
	    android:textSize="14sp"
	    android:textColor="@color/grey"
	    android:text="@string/invite_footer_subtext" >
	</TextView>
	
	<Button
	    android:id="@+id/nux_invite_now"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/invite_footer_subtext"
	    android:layout_width="0dp"
	    android:layout_height="48dp"
	    android:layout_alignLeft="@id/invite_footer_header"
	    android:layout_alignRight="@id/invite_footer_header"
	    android:layout_marginTop="@dimen/nux_button_text_margin"
	    android:background="@color/blue_hike"
	    android:textSize="13sp"
	    android:textColor="@color/white"
	    android:gravity="center"
	    android:text="@string/invite_now_uppercase" >
	</Button>

</RelativeLayout>
</LinearLayout>
