<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="18dp"
	android:paddingRight="18dp">

	<LinearLayout
		android:layout_marginBottom="5dp"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/timestamp_container"
		android:gravity="center_vertical"
		android:layout_marginTop="10dp">

		<View 
		    android:layout_height="1px"
		    android:layout_width="0dp"
		    android:layout_weight="10"
		    android:layout_gravity="center"
		    android:background="@drawable/ic_chatthread_divider"/>
		    
	    <com.bsb.hike.view.CustomFontTextView
	        android:id="@+id/timestamp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="7dp"
        	android:layout_marginRight="7dp"
        	android:layout_alignParentTop="true"
        	android:layout_centerHorizontal="true"
        	android:text="This is the timestamp"
        	android:textSize="13sp"
        	android:textColor="@color/timestampcolor"
        	android:shadowColor="#80FFFFFF"
        	android:shadowDy="0.4"
        	android:shadowRadius="0.3" />

	    <View 
		    android:layout_height="1px"
		    android:layout_width="0dp"
		    android:layout_weight="10"
		    android:layout_gravity="center"
		    android:background="@drawable/ic_chatthread_divider"/>
	</LinearLayout>
	
	<LinearLayout 
    android:id="@+id/participant_info_container"
    android:layout_below="@id/timestamp_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" />

	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/timestamp_container" >

	    <ImageView
	        android:id="@+id/avatar"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/ic_avatar0" />

	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:minWidth="50dp"
	        android:layout_alignParentTop="true"
	        android:layout_alignTop="@id/avatar"
	        android:layout_toRightOf="@id/avatar"
	        android:gravity="left" >

	        <com.bsb.hike.view.CircularProgress
	            android:id="@+id/file_transfer_progress"
	            android:layout_width="22dp"
	            android:layout_height="22dp"
	            android:layout_toRightOf="@+id/receive_message_container"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="7dp"
	            android:visibility="gone" />
	        
	        <LinearLayout
	            android:id="@+id/receive_message_container"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/ic_bubble_white_selector"
	            android:gravity="center_vertical"
	            android:orientation="vertical" >

	            <com.bsb.hike.view.CustomFontTextView
	                    android:id="@+id/participant_name_ft"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="left"
	                    android:text="Thanks lksad"
	                    android:textColor="@color/chat_color"
	                    android:textSize="16sp"
	                    android:textStyle="bold"
	                    android:visibility="gone" />
	            
	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:orientation="horizontal" >

	                <ImageView
	                    android:id="@+id/file_thumb"
	                    android:layout_width="100dp"
	                    android:layout_height="100dp"
	                    android:layout_gravity="center"
	                    android:background="@drawable/ic_default_img"
	                    android:scaleType="centerInside"
	                    android:visibility="gone" />

	                <com.bsb.hike.view.CustomFontTextView
	                    android:id="@+id/message_receive"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="left"
	                    android:text="Thanks lksad jfljasldkf alsdf lkasfdalskdfjlaslkfjalksdfjlas lf asdflasdf lasdjflkasdj flasdjfldsfl"
	                    android:textColor="@color/chat_color"
	                    android:textSize="16sp"
	                    android:visibility="visible" />

	                <com.bsb.hike.view.CustomFontTextView
	                    android:id="@+id/message_receive_ft"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:gravity="left"
	                    android:maxWidth="130dp"
	                    android:text="Thanks lksad jfljasldkf alsdf lkasfdalskdfjlaslkfjalksdfjlas lf asdflasdf lasdjflkasdj flasdjfldsfl"
	                    android:textColor="@color/chat_color"
	                    android:textSize="16sp"
	                    android:visibility="gone" />

	                <ImageView
	                    android:id="@+id/btn_open_file"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:layout_marginLeft="5dp"
	                    android:background="@null"
	                    android:src="@drawable/ic_open_received_file"
	                    android:visibility="gone" />
	            </LinearLayout>
	        </LinearLayout>
	        
	    </RelativeLayout>

	</RelativeLayout>

</RelativeLayout>