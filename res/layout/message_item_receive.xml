<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thatch_repeat"
    android:paddingBottom="8dp"
    android:paddingLeft="18dp"
	android:paddingRight="18dp">

	<LinearLayout
		android:layout_marginBottom="5dp"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/timestamp_container"
		android:gravity="center_vertical"
		android:layout_marginTop="10dp">

		<View 
		    android:layout_height="1px"
		    android:layout_width="0dp"
		    android:layout_weight="10"
		    android:layout_gravity="center"
		    android:background="@drawable/ic_chatthread_divider"/>
		    
	    <com.bsb.hike.view.CustomFontTextView
	        android:id="@+id/timestamp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="7dp"
        	android:layout_marginRight="7dp"
        	android:layout_alignParentTop="true"
        	android:layout_centerHorizontal="true"
        	android:text="This is the timestamp"
        	android:textSize="13sp"
        	android:textColor="@color/timestampcolor"
        	android:shadowColor="#80FFFFFF"
        	android:shadowDy="0.4"
        	android:shadowRadius="0.3" />

	    <View 
		    android:layout_height="1px"
		    android:layout_width="0dp"
		    android:layout_weight="10"
		    android:layout_gravity="center"
		    android:background="@drawable/ic_chatthread_divider"/>
	</LinearLayout>

	<RelativeLayout
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/timestamp_container">

	<ImageView
        android:id="@+id/avatar"
        android:src="@drawable/ic_avatar0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"/>

    <com.bsb.hike.view.CustomFontTextView
     	android:layout_alignParentTop="true"
        android:id="@+id/message_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:background="@drawable/ic_bubble_white_selector"
        android:layout_marginLeft="2dp"
        android:gravity="left"
        android:paddingTop="7dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="Thanks for joining hike.  If you have questions or concerns you can send them to us here!"
        android:textSize="16sp"
        android:textColor="@color/chat_color" />
	</RelativeLayout>
</RelativeLayout>