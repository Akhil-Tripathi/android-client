<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/terms_and_conditions"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="#eaeced" />

        <com.bsb.hike.view.CustomFontTextView
            style="@style/ActionBarText.Shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/terms"
            android:textColor="#adb2b9"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tc_continue_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="47dp"
        android:visibility="visible" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_continue"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:shadowColor="@color/black"
            android:shadowDy="0.7"
            android:shadowRadius="0.7"
            android:text="@string/get_started"
            android:textColor="@drawable/signup_btn_text"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/loading_layout"
            android:layout_width="192dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/signup_btn_loading"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/custom_progress_bar_drawable" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/txt_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:shadowColor="@color/black"
            	android:shadowDy="0.7"
            	android:shadowRadius="0.7"
            	android:textColor="@drawable/signup_btn_text"
            	android:textSize="14sp"
            	android:textStyle="bold|italic"
                android:text="@string/pulling_digits_signup" />
        </LinearLayout>

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/btn_try_again"
            style="@style/SignupButton.Text.Bold.Button"
            android:layout_height="48dp"
            android:background="@drawable/bg_network_error"
            android:onClick="onClick"
            android:text="@string/network_error"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_hi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp"
        android:src="@drawable/hi_logo_big"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/hike_logo_container"
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_below="@id/terms_and_conditions"
        android:clickable="true"
        android:onClick="onHikeIconClicked"
        android:orientation="vertical"
        android:visibility="invisible" >

        <android.support.v4.view.ViewPager
            android:id="@+id/tutorial_pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.viewpagerindicator.IconPageIndicator
            android:id="@+id/tutorial_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>