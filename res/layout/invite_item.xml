<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/list_item" >

    <com.bsb.hike.view.RobotoTextView
        android:id="@+id/invited_text"
        android:text="...Invited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:layout_marginRight="18dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/invite_btn_bckg"
        android:layout_centerVertical="true"
        android:textStyle="bold" />

    <LinearLayout android:id="@+id/name_num_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="18dp"
        android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/invited_text"
		android:orientation="vertical" >
    
    <com.bsb.hike.view.RobotoTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Vijay Raghunathan asdfasdfasd asdfasdfasdf ads adsasd"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <com.bsb.hike.view.RobotoTextView 
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textColor="@color/black"
        android:textSize="13sp"/>
    
    </LinearLayout>

</RelativeLayout>