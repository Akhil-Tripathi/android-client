<?xml version="1.0" encoding="utf-8"?>
	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/bg">
		<RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:text="@string/create_account_instr_dialog_title" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:id="@+id/creat_header" android:background="@drawable/title_bar" android:gravity="left|center_vertical" android:paddingRight="10dip" android:paddingLeft="10dip" android:textSize="18dip" android:ellipsize="end"></TextView>
			<ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_below="@+id/creat_header" android:fillViewport="true" android:layout_height="match_parent" android:layout_above="@+id/bottom_bar">
				<LinearLayout android:id="@+id/linearLayout10" android:layout_width="match_parent" android:layout_height="match_parent">
					<LinearLayout android:layout_width="fill_parent" android:layout_marginLeft="10dip" android:gravity="center_horizontal" android:layout_weight="1" android:id="@+id/linearLayout3" android:layout_height="fill_parent" android:orientation="vertical" android:layout_marginRight="10dip" android:layout_gravity="center">
						<LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout5" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="5dip">
							<TextView android:text="@string/create_account_username" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/create_account_label_username" android:textColor="#ff343436" android:layout_marginBottom="8dip" android:textSize="14dip"></TextView>
							<EditText android:inputType="textEmailAddress" android:imeOptions="actionNext" android:singleLine="true" android:numeric="integer" android:contentDescription="@string/create_account_username" android:id="@+id/create_account_username" android:phoneNumber="true" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>
						</LinearLayout>
						<LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout6" android:layout_height="wrap_content" android:orientation="vertical">
							<TextView android:text="@string/create_account_password" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/create_account_label_password" android:textColor="#ff343436" android:textSize="14dip" android:layout_marginBottom="8dip"></TextView>
							<EditText android:inputType="textPassword" android:imeOptions="actionNext" android:singleLine="true" android:password="true" android:contentDescription="@string/create_account_password" android:id="@+id/create_account_password" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>
						</LinearLayout>
						<LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout7" android:layout_height="wrap_content" android:orientation="vertical">
							<TextView android:text="@string/create_account_confirm_password" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/create_account_label_confirm_password" android:textSize="14dip" android:textColor="#ff343436" android:layout_marginBottom="8dip"></TextView>
							<EditText android:inputType="textPassword" android:imeOptions="actionNext" android:singleLine="true" android:password="true" android:contentDescription="@string/create_account_confirm_password" android:id="@+id/create_account_confirm_password" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="#000000"></EditText>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</ScrollView>
			<LinearLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:id="@+id/bottom_bar" android:background="@color/conversations_divider_color">
				<Button android:textStyle="bold" android:text="@string/create_account_back_button" android:id="@+id/back_button" android:layout_height="wrap_content" android:layout_weight="0.5" android:layout_margin="4sp" android:layout_width="match_parent" android:background="@xml/misc_button_selector" android:textColor="#ff000000" android:textSize="18dip"></Button>
				<Button android:textStyle="bold" android:text="@string/create_account_create_button" android:id="@+id/create_button" android:layout_height="wrap_content" android:layout_weight="0.5" android:layout_margin="4sp" android:layout_width="match_parent" android:background="@xml/misc_green_button_selector" android:textSize="18dip" android:textColor="#ffffffff" android:shadowDy="-2.0" android:shadowRadius="0.1"></Button>
			</LinearLayout>
		</RelativeLayout>
	</FrameLayout>
