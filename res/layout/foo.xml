<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/compose_background" >
        <EditText
		android:id="@+id/msg_compose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
		android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:autoText="true"
		android:background="@drawable/edittext"
        android:hint="@string/type_to_compose"
        android:imeOptions="actionSend"
        android:inputType="text|textAutoCorrect|textShortMessage|textCapSentences|textMultiLine"
        android:singleLine="false"
        android:text="Hello World I like cookies Ilkajsdlkajdslkjadsf alkjdflkjadsflkjdsf lkjadfslkjdfa" >
		<requestFocus />
	</EditText>
			<View
	        android:id="@+id/dummy"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_below="@id/msg_compose"
	        android:layout_marginTop="8dp" />
</RelativeLayout>
</RelativeLayout>