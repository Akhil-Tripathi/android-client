<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boo_boo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/ic_hike_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boo_boo" />

        <com.bsb.hike.view.RobotoTextView
            android:id="@+id/welcome_1"
            style="@style/Text.Shadow.White.Bold"
            android:layout_below="@+id/ic_hike_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/boo_boo"
            android:textSize="18dp" />

        <com.bsb.hike.view.RobotoButton
            android:id="@+id/btn_try_again"
            style="@style/Text.Shadow.White.Bold"
            android:layout_width="match_parent"
            android:layout_below="@id/welcome_1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_button"
            android:onClick="onClick"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="@string/try_again" />

        <com.bsb.hike.view.RobotoTextView
            style="@style/Text.Shadow.White"
            android:layout_below="@id/btn_try_again"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/if_you_see"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>