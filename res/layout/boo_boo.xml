<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boo_boo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/hike_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/hike_logo" />

        <View
            android:id="@+id/header_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/signup_header_dropshadow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="bottom" >

        <ImageView
            android:id="@+id/ic_hike_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boo_boo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_horizontal|top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/welcome_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/error_txt" />

        <!--
             <com.bsb.hike.view.RobotoTextView
            android:id="@+id/welcome_1"
            style="@style/Text.Shadow.White.Bold"
            android:layout_below="@+id/ic_hike_logo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/boo_boo"
            android:textSize="18dp"
            back
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />
        -->

        <ImageButton
            android:id="@+id/btn_try_again"
            style="@style/SignupButton"
            android:layout_marginTop="30dp"
            android:background="@drawable/signup_button"
            android:src="@drawable/try_again"
            android:onClick="onClick" />
    </LinearLayout>

</LinearLayout>