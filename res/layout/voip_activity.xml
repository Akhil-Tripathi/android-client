<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    xmlns:glowpad="http://schemas.android.com/apk/res-auto"
    android:id="@+id/voip_drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_90">
    
    	<RelativeLayout
          android:id="@+id/voip_header"
          android:orientation="vertical"
          android:background="@color/blue_hike"
          android:layout_width="match_parent"
          android:layout_height="104dp"
          android:gravity="center"
          android:paddingLeft="24dp"
          android:paddingRight="24dp">

        <LinearLayout
            android:id="@+id/contact_name_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="32sp" />

            <com.bsb.hike.ui.utils.RecyclingImageView
	            android:id="@+id/hike_logo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/ic_logo_voip" />
          </LinearLayout>

          <com.bsb.hike.view.CustomFontTextView
              android:id="@+id/contact_msisdn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@id/contact_name_group"
              android:textColor="@color/white"
              android:visibility="gone"
              android:textSize="14sp" />

          <com.bsb.hike.view.CustomFontTextView
              android:id="@+id/connection_status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@id/contact_name_group"
              android:textColor="@color/white"
              android:textSize="14sp"/>

          <Chronometer
             android:id="@+id/call_duration"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="14sp"
             android:layout_alignParentRight="true"
             android:layout_below="@id/contact_name_group"
             android:textColor="@color/white"
             android:visibility="gone" />

      </RelativeLayout>

	    <com.bsb.hike.ui.utils.RecyclingImageView
	        android:id="@+id/profile_image"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@id/voip_header"
	        android:layout_centerHorizontal="true"
	        android:scaleType="centerCrop" />

		<FrameLayout
    	    android:id="@+id/profile_image_overlay"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/black_60"
	        android:layout_below="@id/voip_header"
	        android:scaleType="centerCrop" />


		<RelativeLayout
		    android:id="@+id/active_call_group"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="72dp"
		    android:gravity="center"
		    android:background="@color/black_90"
		    android:layout_alignParentBottom="true"
		    android:visibility="gone">
    		
    		<ImageButton
		        android:id="@+id/mute_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:scaleType="centerInside"
		        android:padding="7dp"
		        android:background="@null"
		        android:layout_alignParentLeft="true"
		        android:layout_marginLeft="48dp"
		        android:src="@drawable/voip_mute_btn_selector">
		    </ImageButton>
		    
		     <ImageButton
		        android:id="@+id/hold_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:scaleType="centerInside"
		        android:padding="7dp"
		        android:background="@null"
		        android:layout_centerHorizontal="true"
		        android:src="@drawable/voip_hold_btn_selector">
		    </ImageButton>
		    
		    <ImageButton
		        android:id="@+id/speaker_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@null"
		        android:padding="7dp"
		        android:scaleType="centerInside"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="48dp"
		        android:src="@drawable/voip_speaker_selector">
		    </ImageButton>
		</RelativeLayout>

		<ImageButton
			android:id="@+id/hang_up_btn"
			android:layout_width="match_parent"
			android:layout_height="72dp"
			android:background="@color/voip_hang_up"
			android:src="@drawable/ic_active_hangup"
			android:layout_above="@id/active_call_group"
			android:visibility="gone">
		</ImageButton>

		<com.fima.glowpadview.GlowPadView
			android:id="@+id/glow_pad_view"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="220dp"
			android:focusable="true"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="30dp"
			android:layout_alignParentBottom="true"
			glowpad:directionDescriptions="@array/call_glowpad_directions"
			glowpad:feedbackCount="1"
			glowpad:glowRadius="75dp"
			glowpad:handleDrawable="@drawable/ic_call_glowpad_handle"
			glowpad:innerRadius="15dp"
			glowpad:outerRadius="110dp"
			glowpad:outerRingDrawable="@drawable/ic_call_glowpad_outerring"
			glowpad:pointDrawable="@drawable/ic_call_glowpad_dot"
			glowpad:snapMargin="40dp"
			glowpad:targetDescriptions="@array/call_glowpad_descr"
			glowpad:targetDrawables="@array/call_glowpad_drawables"
			glowpad:vibrationDuration="20" />

</RelativeLayout>
