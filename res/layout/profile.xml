<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thatch_repeat"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_panel_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/top_panel" />

    <ScrollView
        android:id="@+id/profile_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Me"
                android:textColor="@color/timestampcolor"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold" />
			
            <LinearLayout
                android:id="@+id/edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bckg"
                android:orientation="vertical"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <com.bsb.hike.view.CustomFontTextView
                            android:id="@+id/name_edit_field"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:text="Name"
                            android:textColor="@color/lightblack"
                            android:textSize="16sp" />

                        <com.bsb.hike.view.CustomFontEditText
                            android:id="@+id/name_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:textColor="@color/subtext"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:visibility="visible"
                            android:inputType="textCapWords" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_thread_divider_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <com.bsb.hike.view.CustomFontTextView
                            android:id="@+id/phone_edit_field"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:text="Name"
                            android:textColor="@color/lightblack"
                            android:textSize="16sp" />

                        <com.bsb.hike.view.CustomFontEditText
                            android:id="@+id/phone_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:textColor="@color/lightgrey"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:visibility="visible"
                            android:inputType="phone" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_thread_divider_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <com.bsb.hike.view.CustomFontTextView
                            android:id="@+id/email_edit_field"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:text="Name"
                            android:textColor="@color/lightblack"
                            android:textSize="16sp" />

                        <com.bsb.hike.view.CustomFontEditText
                            android:id="@+id/email_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:textColor="@color/subtext"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:visibility="visible"
                            android:inputType="textEmailAddress" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_thread_divider_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <com.bsb.hike.view.CustomFontTextView
                            android:id="@+id/gender_edit_field"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:text="Name"
                            android:textColor="@color/lightblack"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/pick_gender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/guy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_emo_selector"
                                android:onClick="onEmoticonClick"
                                android:paddingBottom="5dp"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/ic_guy" />

                            <ImageView
                                android:id="@+id/girl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/ic_emo_selector"
                                android:onClick="onEmoticonClick"
                                android:paddingBottom="5dp"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/ic_girl" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/ic_thread_divider_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <com.bsb.hike.view.CustomFontTextView
                            android:id="@+id/photo_edit_field"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:text="Name"
                            android:textColor="@color/lightblack"
                            android:textSize="16sp" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/me_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bckg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/my_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/avatar_border"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp">
                        <!-- android:background="@drawable/avatar_border"
                        android:padding="5dp" --> 

                        <ImageView
                            android:id="@+id/profile"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_avatar0" />
                        
                        <ImageView
                            android:id="@+id/profile_border"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/square" />
						
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_edit_profile"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/avatar_border"
                        android:orientation="vertical" >

                        <com.bsb.hike.view.CustomFontTextView
                            android:id="@+id/name_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:text="Kavin Bharti Mittal"
                            android:textColor="@color/lightblack"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_arrow" />
                </RelativeLayout>

                <include
                    android:id="@+id/free_sms"
                    layout="@layout/profile_item"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/settings_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Settings"
                android:textColor="@color/timestampcolor"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/prefs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_bckg"
                android:orientation="vertical" >

                <include
                    android:id="@+id/notifications"
                    layout="@layout/profile_item" 
                    android:layout_marginBottom="50dp" />

                <include
                    android:id="@+id/privacy"
                    layout="@layout/profile_item"
                    android:layout_marginBottom="10dp" />

                <include
                    android:id="@+id/help"
                    layout="@layout/profile_item"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/with_love_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_marginBottom="37dp" >

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/made_with_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/with_love"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>