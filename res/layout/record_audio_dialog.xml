<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="220dp"
    android:background="@color/dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@color/dialog_header_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_record_header" />

        <TextView
            android:id="@+id/recording_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/header_icon"
            android:text="@string/start_rec"
            android:textColor="@color/dialog_header_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recording_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:textColor="@color/dialog_header_text"
            android:textSize="18sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="53"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/record_btn_selector"
            android:src="@drawable/ic_record" />

        <TextView
            android:id="@+id/record_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"
            android:shadowColor="@color/white"
            android:shadowDy="-1.0"
            android:shadowRadius="1.0"
            android:text="@string/tap_to_record"
            android:textColor="@color/record_txt"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/dropshadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/alert_text"
        android:background="@drawable/ic_thread_divider_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_record_button"
            android:text="@string/cancel"
            android:textColor="@drawable/record_btn_txt"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_divider" />

        <Button
            android:id="@+id/send_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_record_button"
            android:enabled="false"
            android:text="@string/send"
            android:textColor="@drawable/record_btn_txt"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>