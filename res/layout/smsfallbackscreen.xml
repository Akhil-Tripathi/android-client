<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black" >

	    <Button
	        android:id="@+id/sendPId"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_centerHorizontal="true"
	        android:background="@color/diamondblue"
	        android:onClick="onClick"
	        android:text="Send"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/white" />

	</RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_nav_bar"
        android:background="@color/white" >

        <TextView
            android:id="@+id/smsFallbackTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="@string/smsFallbackText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/lightblack" />

         <EditText
            android:id="@+id/insertPId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smsFallbackTextId"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="19dp"
            android:inputType="phone"
            android:maxLength="15"
            android:ems="8"
            android:singleLine="true" />
         
		<TextView
            android:id="@+id/enterTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/insertPId"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:visibility="visible" />

       
        <TextView
            android:id="@+id/correctPhoneId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enterTextId"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/red"
            android:visibility="invisible" />

        <Button
            android:id="@+id/resendPhoneId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@id/correctPhoneId"
            android:onClick="onClick"
            android:visibility="invisible"
            android:clickable="false"
            android:text="Resend Phone" />

    </RelativeLayout>

</RelativeLayout>