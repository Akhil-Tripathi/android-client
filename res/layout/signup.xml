<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bckg" >

    <ImageView
        android:id="@+id/hike_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="11dp"
        android:src="@drawable/hike_logo" />

    <View
        android:id="@+id/header_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/hike_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/signup_header_dropshadow" />

    <com.bsb.hike.view.MyViewFlipper
        android:id="@+id/signup_viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_dropshadow"
        android:layout_marginTop="17dp" >

        <include layout="@layout/number_signup_item" />

        <include layout="@layout/pin_signup_item" />

        <include layout="@layout/name_signup_item" />
    </com.bsb.hike.view.MyViewFlipper>

    <include
        android:layout_below="@id/header_dropshadow"
        layout="@layout/boo_boo" />

</RelativeLayout>