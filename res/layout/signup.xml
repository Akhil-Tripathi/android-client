<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <ImageView
        android:id="@+id/hike_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/hike_logo" />

    <View
        android:id="@+id/header_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/hike_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/signup_header_dropshadow" />

    <RelativeLayout
        android:id="@+id/number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp"
        android:paddingTop="50dp" >

        <TextView
            android:id="@+id/num2"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="2" />

        <TextView
            android:id="@+id/num1"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/num2"
            android:background="@drawable/bg_number"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="1"
            android:textColor="@color/signup_blue" />

        <TextView
            android:id="@+id/num3"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/num2"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:text="3" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/signup_viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/number_layout"
        android:layout_below="@id/header_dropshadow" >

        <com.bsb.hike.view.CustomLinearLayout
            android:id="@+id/pulling_no_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include layout="@layout/signup_item" />
        </com.bsb.hike.view.CustomLinearLayout>

        <com.bsb.hike.view.CustomLinearLayout
            android:id="@+id/scanning_contact_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include layout="@layout/signup_item" />
        </com.bsb.hike.view.CustomLinearLayout>

        <com.bsb.hike.view.CustomLinearLayout
            android:id="@+id/getting_name_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include layout="@layout/signup_item" />
        </com.bsb.hike.view.CustomLinearLayout>
    </ViewFlipper>

