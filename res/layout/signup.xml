<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signup_bg" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_bckg" />
    
    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="8dp"
        android:text="Phone"
        android:textColor="@color/signup_white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/header_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/header"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#a4006ab4" />

    <com.bsb.hike.view.MyViewFlipper
        android:id="@+id/signup_viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_dropshadow"
        android:layout_marginTop="17dp" >

        <include layout="@layout/number_signup_item" />

        <include layout="@layout/pin_signup_item" />

        <include layout="@layout/name_signup_item" />
    </com.bsb.hike.view.MyViewFlipper>

    <include
        android:layout_below="@id/header_dropshadow"
        layout="@layout/boo_boo" />

</RelativeLayout>