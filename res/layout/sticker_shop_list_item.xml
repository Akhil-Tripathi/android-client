<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp" >

    <FrameLayout
        android:id="@+id/category_icon_layout"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" >

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <ImageView
        android:id="@+id/category_download_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_download" />

    <LinearLayout
        android:id="@+id/category_description"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/category_download_btn"
        android:layout_toRightOf="@id/category_icon_layout"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/category_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humanoid"
                android:textColor="@color/standerd_black"
                android:textSize="18sp" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/category_freshness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/category_name"
                android:text="NEW"
                android:textColor="#0f8fe1"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/pack_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="16 stickers, 225 KB"
            android:textColor="@color/missing_thumbnail"
            android:textSize="12sp" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/category_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE"
            android:textColor="@color/tab_pressed"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>