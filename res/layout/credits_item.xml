<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/credit_item_bckg"
    android:weightSum="2"
    android:gravity="center_vertical"
    android:baselineAligned="true" >

    <LinearLayout
        android:id="@+id/friends_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp" >

        <com.bsb.hike.view.RobotoTextView
            android:id="@+id/friends_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="5"
            android:textColor="@color/credits_blue"
            android:textSize="19sp" />

        <com.bsb.hike.view.RobotoTextView
            android:id="@+id/friends_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends"
            android:textColor="@color/lightblack"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp" >

        <com.bsb.hike.view.RobotoTextView
            android:id="@+id/sms_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="500"
            android:textColor="@color/credits_blue"
            android:textSize="19sp" />

        <com.bsb.hike.view.RobotoTextView
            android:id="@+id/sms_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_month"
            android:textColor="@color/lightblack"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

</LinearLayout>