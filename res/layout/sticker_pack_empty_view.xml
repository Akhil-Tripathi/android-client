<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <com.bsb.hike.ui.utils.RecyclingImageView
        android:id="@+id/pallete_category_icon"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/sticker_069_hi" />

    <TextView
        android:id="@+id/download_btn"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/pallete_category_icon"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/pallete_category_icon"
        android:background="@color/shop_icon_color"
        android:gravity="center"
        android:text="@string/download_category"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/category_update_details"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/download_btn"
        android:layout_toRightOf="@+id/pallete_category_icon"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/new_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/new_stickers"
            android:textColor="@color/shop_icon_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="We are Hikins"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/category_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="16 Stickers, 200KB"
            android:textColor="@color/standerd_light_grey2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/category_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="FREE"
            android:textColor="@color/standerd_light_grey2"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>