<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawer_center_item_selector"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <com.bsb.hike.view.CustomFontButton
            android:id="@+id/invite_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_drawer_invite_btn"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:shadowColor="#000000"
            android:shadowDy="0.8"
            android:shadowRadius="0.8"
            android:text="@string/invite_1"
            android:textColor="#cdc6ba"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:visibility="visible" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/invite_fav"
            android:layout_toRightOf="@id/hike_icon"
            android:ellipsize="end"
            android:shadowColor="#000000"
            android:shadowDy="0.8"
            android:shadowRadius="0.8"
            android:singleLine="true"
            android:text="@string/no_hike"
            android:textColor="#cdc6ba"
            android:textSize="14sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_drawer_divider"
        android:visibility="gone" />

</RelativeLayout>