<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/conversations_background_tile">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:padding="10dip" android:id="@+id/linearlayout" android:layout_above="@+id/bottom_bar">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:autoLink="none"
			android:id="@+id/SubscriptionTitle" android:text="@string/SubscriptTitle"
			android:textStyle="bold" android:textSize="18sp" android:layout_marginBottom="10dip" android:textColor="@color/black"/>

		<TextView android:layout_width="wrap_content"
			android:autoLink="none"
			android:id="@+id/SubscriptionText" android:text="@string/SubscriptText"
			android:textSize="14sp"
			android:layout_marginBottom="18dp"
			android:focusable="true" android:textColor="@color/black" android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:background="@color/conversations_divider_color" android:layout_height="wrap_content" android:id="@+id/bottom_bar" android:layout_width="fill_parent" android:layout_alignParentBottom="true">
		<Button android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:textSize="18sp" android:text="@string/RefuseButton" android:background="@xml/misc_button_selector" android:id="@+id/SubscriptionRefuse" android:layout_margin="5dip" android:textColor="#ff000000"></Button>
		<Button android:shadowColor="#ff000000" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1" android:shadowDy="-2.0" android:textSize="18sp" android:text="@string/AcceptButton" android:background="@xml/misc_green_button_selector" android:shadowRadius="0.1" android:id="@+id/SubscriptionAccept" android:layout_margin="5dip" android:textColor="#ffffffff"></Button>
	</LinearLayout>
</RelativeLayout>
