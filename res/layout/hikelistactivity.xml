<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeeb"
    android:orientation="vertical" >

   <include
        android:id="@+id/top_panel_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/top_panel" />
	
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white" >

       <com.bsb.hike.view.CustomFontEditText
           android:id="@+id/filter"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:paddingLeft="10dp"
           android:background="@color/white"
           android:hint="Search"
           android:paddingBottom="10dp"
           android:paddingTop="10dp"
           android:singleLine="true"
           android:drawableLeft="@drawable/ic_search_et"
           android:drawablePadding="10dp"
           android:textSize="16sp"
           android:gravity="center_vertical"
           android:textColorHint="#cdcdc8"
           android:textColor="@color/lightblack" >
       </com.bsb.hike.view.CustomFontEditText>

      	<include layout="@layout/tool_tip"/>

   </RelativeLayout>

   <View
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:layout_below="@id/filter"
           android:background="@drawable/thatch_repeat"/>
   
    <ListView
        android:background="#eeeeeb"
        android:id="@+id/contact_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:cacheColorHint="#000000"
        android:divider="@drawable/ic_thread_divider_other"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="2dp"
        android:fastScrollEnabled="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:textFilterEnabled="true" />

</LinearLayout>