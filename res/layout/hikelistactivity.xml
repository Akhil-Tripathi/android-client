<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thatch_repeat"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_panel_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/top_panel" />

    <LinearLayout
        android:id="@+id/input_number_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:orientation="horizontal" >

        <com.bsb.hike.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/to"
            android:textColor="#818181"
            android:textSize="16sp" />

        <com.bsb.hike.view.CustomFontEditText
            android:id="@+id/input_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/start_typing_new"
            android:imeOptions="actionNone"
            android:minHeight="48dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="18dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/lightblack"
            android:textColorHint="#cdcdc8"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

    <com.bsb.hike.view.CustomFontTextView
        android:id="@+id/nux_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        android:shadowColor="@color/white"
        android:shadowDy="0.5"
        android:shadowRadius="0.5"
        android:text="@string/which_friend_invite"
        android:textColor="#4e4c48"
        android:textSize="14sp"
        android:visibility="gone" />
    
    <ListView
        android:id="@+id/contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/offwhite"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/ic_thread_divider_profile"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="2dp"
        android:fastScrollEnabled="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:textFilterEnabled="true" />

    <View
        android:id="@+id/bottom_nav_bar_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dropshadow" />

</LinearLayout>