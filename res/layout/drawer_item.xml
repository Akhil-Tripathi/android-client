<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:focusable="true"
    android:clickable="true"
    android:onClick="onDrawerItemClicked" >

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/drawer_center_item_selector" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_drawer_home" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_icon"
            android:shadowColor="#66000000"
            android:shadowDy="0.3"
            android:shadowRadius="0.5"
            android:text="Credits"
            android:textColor="@color/white"
            android:textSize="16sp" />
        
        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/credit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_credit_num"
            android:gravity="center"
            android:shadowColor="#3d000000"
            android:shadowDx="0.5"
            android:shadowDy="0.5"
            android:shadowRadius="0.2"
            android:text="25"
            android:textColor="@color/offwhite"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_drawer_divider" />

</RelativeLayout>