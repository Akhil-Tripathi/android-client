<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/thatch_repeat" >

    <com.bsb.hike.view.CustomLinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thatch_repeat"
        android:orientation="vertical" >

        <include
            android:id="@+id/top_panel_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/top_panel" />

        <LinearLayout
            android:id="@+id/input_number_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical" >

            
            <AutoCompleteTextView
                android:id="@+id/input_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:completionThreshold="1"
                android:dropDownVerticalOffset="11dp"
                android:dropDownWidth="match_parent"
                android:fadingEdge="none"
                android:hint="Start typing a name"
                android:imeOptions="actionNone"
                android:paddingBottom="7dp"
                android:paddingRight="18dp"
                android:paddingTop="7dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:visibility="visible"
                android:drawableLeft="@drawable/ic_name_2"
                android:drawablePadding="10dp"
                 >
            </AutoCompleteTextView>
        </LinearLayout>

        <ListView
            android:id="@+id/conversations_list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:fadingEdge="none" >
        </ListView>

        <RelativeLayout
            android:id="@+id/sms_chat_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/compose_background" >

            <com.bsb.hike.view.RobotoTextView
                android:id="@+id/sms_chat_metadata_num_chars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:text="24/140"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <com.bsb.hike.view.RobotoTextView
                android:id="@+id/sms_chat_metadata_text_credits_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:paddingRight="10dp"
                android:text="99 credits left"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/compose_background" >

            <com.bsb.hike.view.RobotoEditText
                android:id="@+id/msg_compose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/send_message"
                android:autoText="true"
                android:background="@drawable/edittext"
                android:hint="@string/type_to_compose"
                android:inputType="text|textAutoCorrect|textCapSentences|textMultiLine"
                android:maxLines="4" >

                <requestFocus />
            </com.bsb.hike.view.RobotoEditText>

            <View
                android:id="@+id/dummy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/msg_compose"
                android:layout_marginTop="8dp" />

            <com.bsb.hike.view.RobotoButton
                android:id="@+id/send_message"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/send_hike_btn_selector"
                android:state_enabled="false"
                android:text="@string/send"
                style="@style/Text.Shadow.White.Bold"
                android:textSize="14sp"
                android:onClick="onSendClick"
                android:layout_alignTop="@id/msg_compose"
                android:layout_alignBottom="@id/msg_compose" />
        </RelativeLayout>
    </com.bsb.hike.view.CustomLinearLayout>
	
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black" >
        
        <com.bsb.hike.view.RobotoTextView
            android:bufferType="spannable"
            android:id="@+id/overlay_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="@string/block_overlay_message"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>

        <ImageView
            android:id="@+id/overlay_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_above="@+id/overlay_message"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_no" />

        <com.bsb.hike.view.RobotoButton
            android:shadowColor="#000000"
            android:shadowDx="-0.5"
            android:shadowDy="-0.5"
            android:shadowRadius="1"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:id="@+id/overlay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overlay_message"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:onClick="onOverlayButtonClick"
            android:text="@string/unblock_title" />

        <LinearLayout
            android:id="@+id/dismiss_overlay_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overlay_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:onClick="onOverlayButtonClick"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dismiss_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dismiss" />

            <com.bsb.hike.view.RobotoTextView
                android:id="@+id/dismiss_overlay"
                style="@style/Text.Shadow.White"
                android:layout_marginLeft="3dp"
                android:text="@string/dismiss" />
        </LinearLayout>
        
        <ImageButton
            android:id="@+id/btn_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:src="@drawable/ic_i"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>