<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/thatch_repeat" >

    <com.bsb.hike.view.CustomLinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thatch_repeat"
        android:orientation="vertical" >

        <include
            android:id="@+id/top_panel_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/top_panel" />

        <LinearLayout
            android:id="@+id/input_number_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/to"
                android:textColor="#818181"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/input_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/start_typing_new"
                android:imeOptions="actionNone"
                android:minHeight="48dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColor="@color/lightblack"
                android:textColorHint="#cdcdc8"
                android:textSize="16sp"
                android:visibility="visible" >
            </EditText>
        </LinearLayout>

        <ListView
            android:id="@+id/contact_search_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:background="@color/offwhite"
            android:divider="@null"
            android:fadingEdge="none"
            android:fastScrollEnabled="true" />

        <LinearLayout
            android:id="@+id/progress_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateDrawable="@drawable/loading"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:id="@+id/bottom_nav_bar_dropshadow"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dropshadow" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30" >

            <ListView
                android:id="@+id/conversations_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent" >
            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="50dp" >

                <include layout="@layout/tool_tip" />
            </LinearLayout>

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/sms_counter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/compose_box"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:text="99 SMS left"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:visibility="invisible" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/conversation_mute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_conversation_mute"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:shadowColor="#66ffffff"
                android:shadowDy="0.5"
                android:shadowRadius="0.5"
                android:text="@string/group_mute"
                android:textColor="#7c6e57"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_compose_box"
            android:padding="4dp" >

            <RelativeLayout
                android:id="@+id/compose_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fg_compose_box" >

                <ImageButton
                    android:id="@+id/send_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tb_layout"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/hike_msg_btn"
                    android:background="@null"
                    android:onClick="onSendClick"
                    android:state_enabled="false" />

                <ImageButton
                    android:id="@+id/emo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tb_layout"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:onClick="onEmoticonBtnClicked"
                    android:paddingBottom="13dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="13dp"
                    android:src="@drawable/emoticon_hike_btn" />

                <RelativeLayout
                    android:id="@+id/tb_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/send_message"
                    android:layout_toRightOf="@id/emo_btn"
                    android:gravity="center_vertical" >

                    <com.bsb.hike.view.CustomFontEditText
                        android:id="@+id/msg_compose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/type_to_compose"
                        android:imeOptions="actionSend"
                        android:inputType="text|textAutoCorrect|textCapSentences|textMultiLine|"
                        android:lineSpacingExtra="3dp"
                        android:maxLength="@integer/max_length_message"
                        android:maxLines="4"
                        android:minHeight="46dp"
                        android:paddingRight="5dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/chat_color"
                        android:textColorHint="#cdcdc8"
                        android:textSize="15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tb_layout"
                    android:layout_alignLeft="@+id/tb_layout"
                    android:layout_alignRight="@+id/tb_layout"
                    android:layout_alignTop="@+id/tb_layout"
                    android:gravity="right|center_vertical"
                    android:onClick="onTitleIconClick"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_info" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tb_layout"
                    android:layout_alignRight="@+id/tb_layout"
                    android:layout_alignTop="@+id/tb_layout"
                    android:gravity="right|center_vertical"
                    android:onClick="onTitleIconClick"
                    android:paddingLeft="10dp"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_info" />
                </LinearLayout>

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/sms_chat_metadata_num_chars"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/send_message"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/emoticon_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/emoticon_pallete"
                android:layout_below="@id/compose_container"
                android:visibility="gone" >

                <include layout="@layout/emoticon_layout" />
            </RelativeLayout>
        </RelativeLayout>
    </com.bsb.hike.view.CustomLinearLayout>

    <include layout="@layout/dark_overlay" />

</RelativeLayout>