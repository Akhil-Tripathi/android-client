<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/thatch_repeat" >

    <com.bsb.hike.view.CustomLinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thatch_repeat"
        android:orientation="vertical" >

        <include
            android:id="@+id/top_panel_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/top_panel" />

        <LinearLayout
            android:id="@+id/input_number_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:orientation="horizontal" >

            <AutoCompleteTextView
                android:id="@+id/input_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:completionThreshold="1"
                android:drawableLeft="@drawable/ic_name_2"
                android:drawablePadding="10dp"
                android:dropDownVerticalOffset="7dp"
                android:dropDownWidth="match_parent"
                android:fadingEdge="none"
                android:hint="Start typing a name..."
                android:imeOptions="actionNone"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="18dp"
                android:paddingTop="7dp"
                android:singleLine="true"
                android:textColor="@color/lightblack"
                android:textColorHint="#cdcdc8"
                android:textSize="16sp"
                android:visibility="visible" >
            </AutoCompleteTextView>

            <MultiAutoCompleteTextView
                android:id="@+id/input_number_multi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:completionThreshold="1"
                android:drawableLeft="@drawable/ic_name_2"
                android:drawablePadding="10dp"
                android:dropDownVerticalOffset="7dp"
                android:dropDownWidth="match_parent"
                android:fadingEdge="none"
                android:hint="Start typing a name..."
                android:imeOptions="actionNone"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="18dp"
                android:paddingTop="7dp"
                android:textColor="@color/lightblack"
                android:textColorHint="#cdcdc8"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="30" >

            <ListView
                android:id="@+id/conversations_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent" >
            </ListView>

            <include layout="@layout/tool_tip" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/sms_counter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/compose_box"
                android:gravity="center_vertical"
                android:paddingLeft="13dp"
                android:text="99 SMS left"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/emoticon_layout"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_alignParentBottom="true"
                android:background="@color/emoticon_page_bg"
                android:visibility="invisible" >

                <include layout="@layout/emoticon_layout" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="@drawable/bg_compose_box" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fg_compose_box" >

                <com.bsb.hike.view.CustomFontButton
                    android:id="@+id/send_message"
                    android:layout_width="45dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_alignBottom="@+id/tb_layout"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_send_hike_btn"
                    android:onClick="onSendClick"
                    android:state_enabled="false"
                    android:text="@string/send"
                    android:textColor="@drawable/send_hike_btn_txt"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/emo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tb_layout"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:onClick="onEmoticonBtnClicked"
                    android:paddingBottom="11dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="9dp"
                    android:src="@drawable/emoticon_hike_btn" />

                <RelativeLayout
                    android:id="@+id/tb_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@id/send_message"
                    android:layout_toRightOf="@id/emo_btn"
                    android:gravity="center_vertical" >

                    <com.bsb.hike.view.CustomFontEditText
                        android:id="@+id/msg_compose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/type_to_compose"
                        android:imeOptions="actionSend"
                        android:inputType="text|textAutoCorrect|textCapSentences|textMultiLine|"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="4"
                        android:paddingBottom="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/chat_color"
                        android:textColorHint="#cdcdc8"
                        android:textSize="15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tb_layout"
                    android:layout_alignLeft="@+id/tb_layout"
                    android:layout_alignRight="@+id/tb_layout"
                    android:layout_alignTop="@+id/tb_layout"
                    android:layout_marginBottom="8dp"
                    android:gravity="right|center_vertical"
                    android:onClick="onTitleIconClick"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_info" />
                </LinearLayout>

                <com.bsb.hike.view.CustomFontTextView
                    android:id="@+id/sms_chat_metadata_num_chars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/send_message"
                    android:layout_alignRight="@id/send_message"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>
    </com.bsb.hike.view.CustomLinearLayout>

    <include layout="@layout/dark_overlay"/>

</RelativeLayout>