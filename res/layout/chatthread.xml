<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/top_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/headerbar" >

        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:src="@drawable/ic_header_logo"/>

        <AutoCompleteTextView
            android:background="@drawable/edittext"
            android:hint="Start typing a name"
            android:visibility="visible"
            android:imeOptions="actionNone"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_number">
        </AutoCompleteTextView>

    </LinearLayout>

	<ListView
	    android:fadingEdge="none"
	    android:id="@+id/conversations_list"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="30"
	    android:background="@color/white"
	    android:cacheColorHint="#00000000"
	    android:divider="@color/dividercolor"
	    android:dividerHeight="0.5dp"
	    android:transcriptMode="alwaysScroll" >
	</ListView>

	<RelativeLayout
	    android:id="@+id/sms_chat_metadata"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@color/compose_background" >

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/sms_chat_metadata_num_chars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="24/160"
            android:textColor="@color/white"
            android:textSize="12dp" >
        </TextView>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/sms_chat_metadata_text_credits_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="99 credits left"
            android:textColor="@color/white"
            android:textSize="12dp" >
        </TextView>
        <View
            android:layout_below="@id/sms_chat_metadata_num_chars"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#ffffff" />
    </RelativeLayout>

	<RelativeLayout
	    android:id="@+id/bottom_panel"
	    android:layout_width="fill_parent"
	    android:layout_height="58dp"
	    android:background="@color/compose_background" >

        <EditText
            android:background="@drawable/edittext"
             android:id="@+id/msg_compose"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="12dp"
             android:layout_marginTop="9dp"
             android:layout_marginBottom="9dp"
             android:imeOptions="actionSend"
             android:autoText="true"
             android:layout_toLeftOf="@+id/send_message"
             android:hint="@string/type_to_compose"
             android:inputType="text|textAutoCorrect|textShortMessage|textCapSentences" >
             <requestFocus/>
        </EditText>

        <Button
            android:background="@drawable/sendbutton"
            android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="57px"
            android:layout_height="37px"
            android:id="@+id/send_message"
            android:enabled="false"
            android:onClick="onSendClick"/>
 	</RelativeLayout>
</LinearLayout>