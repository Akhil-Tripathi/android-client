<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/thatch_repeat"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_panel_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/top_panel" />

    <LinearLayout
        android:id="@+id/input_number_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical" >

        <AutoCompleteTextView
            android:id="@+id/input_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/edittext"
            android:singleLine="true"
            android:hint="Start typing a name"
            android:imeOptions="actionNone"
            android:visibility="visible"
            android:completionThreshold="1"
            android:dropDownVerticalOffset="8dp" >
        </AutoCompleteTextView>
    </LinearLayout>

    <ListView
        android:id="@+id/conversations_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:transcriptMode="alwaysScroll" >
    </ListView>

    <RelativeLayout
        android:id="@+id/sms_chat_metadata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/compose_background" >

        <TextView
            android:id="@+id/sms_chat_metadata_num_chars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:text="24/140"
            android:textColor="@color/white"
            android:textSize="12dp" >
        </TextView>

        <TextView
            android:id="@+id/sms_chat_metadata_text_credits_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:paddingRight="10dp"
            android:text="99 credits left"
            android:textColor="@color/white"
            android:textSize="12dp" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/compose_background" >

        <EditText
            android:id="@+id/msg_compose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/send_message"
            android:autoText="true"
            android:background="@drawable/edittext"
            android:hint="@string/type_to_compose"
            android:imeOptions="actionSend"
            android:maxLines="4"
            android:inputType="text|textAutoCorrect|textShortMessage|textCapSentences|textMultiLine" >

            <requestFocus />
        </EditText>

        <View
	        android:id="@+id/dummy"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_below="@id/msg_compose"
	        android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/sendbutton"
            android:enabled="false"
            android:onClick="onSendClick" />
    </RelativeLayout>

</LinearLayout>