<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/thatch_repeat" >

    <com.bsb.hike.view.CustomLinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thatch_repeat"
        android:orientation="vertical" >

        <include
            android:id="@+id/top_panel_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            layout="@layout/top_panel" />

        <LinearLayout
            android:id="@+id/input_number_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            
            <AutoCompleteTextView
                android:id="@+id/input_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:completionThreshold="1"
                android:dropDownVerticalOffset="7dp"
                android:dropDownWidth="match_parent"
                android:fadingEdge="none"
                android:hint="Start typing a name..."
                android:imeOptions="actionNone"
                android:paddingBottom="7dp"
                android:paddingRight="18dp"
                android:paddingTop="7dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:visibility="visible"
                android:drawableLeft="@drawable/ic_name_2"
                android:drawablePadding="10dp"
                android:textSize="16sp"
                android:textColorHint="#cdcdc8"
                android:textColor="@color/lightblack" >
            </AutoCompleteTextView>
        </LinearLayout>
		
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="30" >

		    <ListView
		        android:id="@+id/conversations_list"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:cacheColorHint="#00000000"
		        android:divider="@null"
		        android:fadingEdge="none" >
		    </ListView>

		    <include layout="@layout/tool_tip"/>
		    
		    <com.bsb.hike.view.CustomFontTextView
		        android:id="@+id/sms_counter"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/compose_box"
		        android:layout_alignParentBottom="true"
		        android:gravity="center_vertical"
		        android:paddingLeft="13dp"
		        android:text="99 SMS left"
		        android:textColor="@color/green"
		        android:textSize="14sp"
		        android:visibility="invisible" />
		</RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/bottom_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/compose_box" >
			
            <com.bsb.hike.view.CustomFontButton
                android:id="@+id/send_message"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/msg_compose"
                android:background="@drawable/send_hike_btn_selector"
                android:state_enabled="false"
                android:text="@string/send"
                style="@style/Text"
                android:textStyle="bold"
                android:textSize="13sp"
                android:onClick="onSendClick"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@drawable/top_bar_btn_txt_selector" />
            
            <com.bsb.hike.view.CustomFontEditText
                android:id="@+id/msg_compose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/send_message"
                android:autoText="true"
                android:background="@drawable/chat_thread"
                android:hint="@string/type_to_compose"
                android:gravity="top"
                android:imeOptions="actionSend"
                android:inputType="text|textAutoCorrect|textCapSentences|textMultiLine|"
                android:maxLines="4"
                android:textSize="15sp"
                android:textColor="@color/chat_color"
                android:textColorHint="#cdcdc8"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:lineSpacingExtra="2dp" >

                <requestFocus />
            </com.bsb.hike.view.CustomFontEditText>
			
            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/msg_compose"
                android:layout_alignLeft="@id/msg_compose"
                android:layout_alignRight="@id/msg_compose"
                android:layout_alignTop="@id/msg_compose"
                android:gravity="right|center_vertical"
                android:onClick="onTitleIconClick"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_info" />
            </LinearLayout>
            
            <View
                android:id="@+id/dummy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/msg_compose"
                android:layout_marginTop="8dp" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/sms_chat_metadata_num_chars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/send_message"
                android:layout_alignRight="@id/send_message"
                android:gravity="center_horizontal"
                android:layout_alignTop="@id/msg_compose"
                android:visibility="invisible" />
            
        </RelativeLayout>
    </com.bsb.hike.view.CustomLinearLayout>
	
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onOverlayButtonClick"
        android:background="@color/transparent_black" >
        
        <com.bsb.hike.view.CustomFontTextView
            android:bufferType="spannable"
            android:id="@+id/overlay_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="@string/block_overlay_message"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>

        <ImageView
            android:id="@+id/overlay_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_above="@+id/overlay_message"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_no" />

        <com.bsb.hike.view.CustomFontButton
            android:shadowColor="#000000"
            android:shadowDx="-0.5"
            android:shadowDy="-0.5"
            android:shadowRadius="1"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:id="@+id/overlay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overlay_message"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:onClick="onOverlayButtonClick"
            android:text="@string/unblock_title" />

    </RelativeLayout>

</RelativeLayout>