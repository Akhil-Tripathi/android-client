<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/conversation_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"
            android:src="@drawable/ic_avatar0" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/last_message_timestamp"
            android:layout_toRightOf="@id/avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Kavin Mittal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/last_message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:paddingTop="2dp"
            android:text="9:35AM"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contact"
            android:layout_below="@+id/last_message_timestamp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/msg_status_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_unread"
                android:visibility="visible" />

            <TextView
                android:id="@+id/last_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/msg_status_indicator"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="what&apos;s up dude?  I really like cookies.  They taste so good and fresh.  I like pie as well.  I&apos;m so fat"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contact"
                android:layout_below="@+id/last_message_timestamp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/msg_status_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contact"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/avatar"
                    android:src="@drawable/ic_unread"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/last_message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/msg_status_indicator"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="what&apos;s up dude?  I really like cookies.  They taste so good and fresh.  I like pie as well.  I&apos;m so fat"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/grey" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>