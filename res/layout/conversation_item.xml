<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ViewAnimator
        android:id="@+id/conversation_flip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/compose_background"
        android:saveEnabled="true" >

        <RelativeLayout
            android:id="@+id/conversation_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_item"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="Kavin Mittal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/msg_status_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/contact"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/last_message_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/contact"
                android:layout_marginRight="10dp"
                android:text="9:35AM"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/last_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/msg_status_indicator"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/last_message_timestamp"
                android:layout_toRightOf="@+id/msg_status_indicator"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="what&apos;s up dude?  I really like cookies.  They taste so good and fresh.  I like pie as well.  I&apos;m so fat"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottom_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:background="@drawable/sendbutton"
                android:id="@+id/send_message"
	            android:layout_width="57px"
    	        android:layout_height="37px"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="21dp"
                android:enabled="false"
                android:onClick="onSendClick" />

            <EditText
                android:id="@+id/mini_compose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/send_message"
                android:autoText="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext"
                android:hint="@string/type_to_compose"
                android:imeOptions="actionSend"
                android:inputType="text|textAutoCorrect|textShortMessage|textCapSentences" />

        </RelativeLayout>

    </ViewAnimator>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black" />

</RelativeLayout>