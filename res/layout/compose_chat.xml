<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/spinner"
        layout="@layout/spinner_center_screen"
        android:visibility="gone" />

    <ViewStub android:id="@+id/tipLayoutViewStub" 
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:layout="@layout/welcome_hike_tip" android:inflatedId="@+id/tipMultiForward"/>

    <RelativeLayout
        android:id="@+id/nuxComposeCard"
        style="@style/CardContainerWithdoutPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:visibility="gone" >

        <com.bsb.hike.ui.utils.RecyclingImageView
            android:id="@+id/nuxComposeSticker"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sticker_006_angry" />

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/nuxComposeSticker"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/ftue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ftue_sticker_forward_card_text"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/ftue_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/ftue_sticker_forward_card_subtext"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
    
    <com.bsb.hike.view.TagEditText
        android:id="@+id/composeChatNewGroupTagET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/compose_chat_content_margin"
        android:layout_marginRight="@dimen/compose_chat_content_margin"
        android:background="@drawable/bg_country_search_bar"
        android:imeOptions="flagNoExtractUi"
        android:gravity="center_vertical"
        android:hint="@string/new_chat_compose_hint"
        android:maxLines="2"
        android:minHeight="46dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp" >
    </com.bsb.hike.view.TagEditText>

    <com.bsb.hike.view.PinnedSectionListView
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/list"
        style="@style/HomeList" >
    </com.bsb.hike.view.PinnedSectionListView>
    <include
        android:id="@android:id/empty"
        layout="@layout/list_empty_view"
        android:visibility="gone" >
    </include>
	
<include layout="@layout/select_all_bottom_bar"/>
</LinearLayout>