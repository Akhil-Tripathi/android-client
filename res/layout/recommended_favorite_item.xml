<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/drawer_center_item_selector" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_drawer_home" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_icon"
            android:ellipsize="end"
            android:shadowColor="#66000000"
            android:shadowDy="0.5"
            android:shadowRadius="0.6"
            android:text="Credits asjfdlkjsadlf lasdflasjfl asldfjlasjflk jaslflkasdfj lasfas df lasfdlasj dflas"
            android:textColor="@color/offwhite"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_msg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/item_icon"
            android:orientation="horizontal" >

            <com.bsb.hike.view.CustomFontButton
                android:id="@+id/add"
                style="@style/FavoriteButtons"
                android:layout_below="@id/item_name"
                android:layout_weight="1"
                android:background="@drawable/bg_fav_yes_selector"
                android:text="@string/yes" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <com.bsb.hike.view.CustomFontButton
                android:id="@+id/not_now"
                style="@style/FavoriteButtons"
                android:layout_below="@id/item_name"
                android:layout_weight="1"
                android:background="@drawable/bg_fav_no_selector"
                android:text="@string/no_thanks" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_drawer_divider"
        android:visibility="gone" />

</RelativeLayout>