<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/divider_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="7dp"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp" 
            android:contentDescription="Message Icon"
            android:onClick="messageBtnClicked"
            android:background="@drawable/list_item"
            android:gravity="center">

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:src="@drawable/ic_hike_message" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="1.5dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="#d9dbdc" />

         <LinearLayout 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Call Icon"
            android:onClick="callBtnClicked"
            android:background="@drawable/list_item"
            android:gravity="center">
            
        
        <ImageView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Call Icon"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:src="@drawable/ic_call" />
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:orientation="vertical" >

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:contentDescription="Phone Number"
            android:singleLine="true"
            android:textColor="#33312e"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/main_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Phone type"
            android:textColor="#33312e"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>