<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seen_timeline_item"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/status_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_status_type"
            android:paddingBottom="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_text_status" />

        <com.bsb.hike.view.CustomFontTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:paddingTop="1dp"
            android:text="2 Minutes Ago"
            android:textColor="@color/timestampcolor"
            android:textSize="12sp"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/time"
            android:layout_toRightOf="@id/status_type"
            android:orientation="vertical" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a status"
                android:textColor="@color/subtext"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/status_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:onClick="onViewImageClicked"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/content"
        android:visibility="gone" />

    <View
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e0e0dc" />

    <View
        android:id="@+id/div2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/div1"
        android:background="#cdccc8" />

    <View
        android:id="@+id/div3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/div2"
        android:background="#fefefe" />
</LinearLayout>