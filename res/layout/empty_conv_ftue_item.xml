<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/all_content"
        style="@style/CardContainerWithdoutPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:background="#dc354b"
            android:minHeight="116dp"
            android:scaleType="centerInside"
            android:src="@drawable/ftue_hidden_mode_card_small_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="14dp" >

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/card_txt_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hidden Mode"
                android:textColor="#333333"
                android:textSize="24dp"
                android:textStyle="italic" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/card_txt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ftue_hidden_mode_card_msg"
                android:textColor="#555555"
                android:textSize="14dp"
                android:textStyle="italic" />

            <com.bsb.hike.view.CustomFontTextView
                android:id="@+id/card_action_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Tap here to get started!"
                android:textColor="#959595"
                android:textSize="14dp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>