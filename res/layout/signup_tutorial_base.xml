<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hike="http://schemas.android.com/apk/res/com.bsb.hike"
    android:id="@+id/intro_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thatch_repeat"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/intro_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:scaleType="fitEnd"
        android:src="@drawable/ready_to_hike" />

    <com.bsb.hike.view.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:shadowColor="@color/white"
        android:shadowDy="0.5"
        android:shadowRadius="0.5"
        android:text="@string/happy_messaging"
        android:textColor="#5399d9"
        android:textSize="24sp"
        android:textStyle="bold"
        hike:font="omnes" />

    <com.bsb.hike.view.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:shadowColor="@color/white"
        android:shadowDy="0.5"
        android:shadowRadius="0.5"
        android:text="@string/intro_info"
        android:textColor="#4e4c48"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

</LinearLayout>